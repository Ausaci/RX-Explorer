<Page x:Class="RX_Explorer.View.CompressionViewer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:Cls="using:RX_Explorer.Class"
      xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:Brush="using:Microsoft.Toolkit.Uwp.UI.Media"
      xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
      xmlns:Windows11Present="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract,14)"
      xmlns:Windows11NotPresent="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractNotPresent(Windows.Foundation.UniversalApiContract,14)"
      xmlns:Trigger="using:Microsoft.Toolkit.Uwp.UI.Triggers"
      NavigationCacheMode="Enabled"
      mc:Ignorable="d">

    <Page.Resources>
        <Cls:CompressionRateConverter x:Key="CompressionRateConverter" />
        <Cls:SizeDescriptionConverter x:Key="SizeConverter" />
        <Cls:SizeLabelVisibilityConverter x:Key="SizeVisibilityConverter" />
        <Cls:DateTimeDescriptionConverter x:Key="DateTimeConverter" />
        <Cls:InverseConverter x:Key="InverseConverter" />
        <Cls:AnimationStyleSelector x:Key="AnimationStyleSelector" />

        <muxc:CommandBarFlyout x:Name="ItemFlyout"
                               ShouldConstrainToRootBounds="False">
            <muxc:CommandBarFlyout.SecondaryCommands>
                <AppBarButton Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Decompression')}"
                              MinWidth="220"
                              Click="Extract_Click">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                  Glyph="&#xF133;" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Delete')}"
                              Icon="Delete"
                              IsEnabled="{x:Bind IsReadonlyMode,Mode=OneWay,Converter={StaticResource InverseConverter}}"
                              MinWidth="220"
                              Click="Delete_Click"/>
                <AppBarButton Label="{x:Bind Cls:Globalization.GetString('Operate_Text_CopyFullName')}"
                              Click="CopyFullName_Click">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                  Glyph="&#xF413;" />
                    </AppBarButton.Icon>
                </AppBarButton>
            </muxc:CommandBarFlyout.SecondaryCommands>
        </muxc:CommandBarFlyout>

        <muxc:CommandBarFlyout x:Name="EmptyFlyout"
                               ShouldConstrainToRootBounds="False">
            <muxc:CommandBarFlyout.SecondaryCommands>
                <AppBarButton Label="全部解压"
                              MinWidth="220"
                              x:Uid="ExtractAll"
                              Click="ExtractAll_Click">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                  Glyph="&#xF133;" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton Label="{x:Bind Cls:Globalization.GetString('Operate_Text_CreateFile')}"
                              Icon="OpenFile"
                              IsEnabled="{x:Bind IsReadonlyMode,Mode=OneWay,Converter={StaticResource InverseConverter}}"
                              MinWidth="220" 
                              Click="CreateNewFile_Click"/>
                <AppBarButton Label="{x:Bind Cls:Globalization.GetString('Operate_Text_CreateFolder')}"
                              Icon="NewFolder"
                              MinWidth="220"
                              IsEnabled="{x:Bind IsReadonlyMode,Mode=OneWay,Converter={StaticResource InverseConverter}}"
                              Click="CreateNewFolder_Click" />
            </muxc:CommandBarFlyout.SecondaryCommands>
        </muxc:CommandBarFlyout>
    </Page.Resources>

    <Grid x:Name="PageRoot"
          DataContext="{x:Bind Cls:ViewHeightOffsetWapper.Current}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <CommandBar DefaultLabelPosition="Right"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    Background="{ThemeResource ElementCustomAcrylicBrush}">
            <CommandBar.PrimaryCommands>
                <AppBarButton Label="{x:Bind Cls:Globalization.GetString('Operate_Text_CreateFile')}"
                              Icon="OpenFile"
                              IsEnabled="{x:Bind IsReadonlyMode,Mode=OneWay,Converter={StaticResource InverseConverter}}"
                              Click="CreateNewFile_Click" />
                <AppBarButton Label="{x:Bind Cls:Globalization.GetString('Operate_Text_CreateFolder')}"
                              Icon="NewFolder"
                              IsEnabled="{x:Bind IsReadonlyMode,Mode=OneWay,Converter={StaticResource InverseConverter}}"
                              Click="CreateNewFolder_Click" />
                <AppBarButton Label="全部解压"
                              x:Uid="ExtractAll"
                              Click="ExtractAll_Click">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                  Glyph="&#xF133;" />
                    </AppBarButton.Icon>
                </AppBarButton>
            </CommandBar.PrimaryCommands>
            <CommandBar.Content>
                <Grid Height="Auto"
                      Width="450">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            x:Uid="FileControlParentButton"
                            Margin="1"
                            x:Name="GoParentFolder"
                            IsEnabled="False"
                            ToolTipService.ToolTip="返回上级"
                            AllowFocusWhenDisabled="True"
                            Click="GoParentFolder_Click">
                        <Viewbox>
                            <SymbolIcon Symbol="Up" />
                        </Viewbox>
                    </Button>
                    <AutoSuggestBox Grid.Column="1"
                                    Margin="1"
                                    Name="AddressBox"
                                    QueryIcon="Forward"
                                    ItemsSource="{x:Bind AutoSuggestList}"
                                    TextChanged="AddressBox_TextChanged"
                                    QuerySubmitted="AddressBox_QuerySubmitted"/>
                </Grid>
            </CommandBar.Content>
        </CommandBar>
        <Grid x:Name="ListViewPanelRoot"
              Grid.Row="1"
              DataContext="{x:Bind ColumnWidthSaver}">
            <ListView x:Name="ListViewControl"
                      SelectionMode="Extended"
                      CanDrag="False"
                      CanReorderItems="False"
                      AllowDrop="True"
                      IsItemClickEnabled="True"
                      IsDoubleTapEnabled="True"
                      ShowsScrollingPlaceholders="False"
                      ContainerContentChanging="ListViewControl_ContainerContentChanging"
                      ContextRequested="ListViewControl_ContextRequested"
                      ContextCanceled="ListViewControl_ContextCanceled"
                      DoubleTapped="ListViewControl_DoubleTapped"
                      DragOver="ListViewControl_DragOver"
                      Drop="ListViewControl_Drop"
                      Windows11NotPresent:ItemContainerStyleSelector="{StaticResource AnimationStyleSelector}"
                      Style="{StaticResource ListViewStyleWithFixedHeader}"
                      ItemsSource="{x:Bind EntryList}"
                      ItemContainerTransitions="{x:Bind Cls:AnimationController.Current.RepositionTransitions,Mode=OneWay}">
                <ListView.Resources>
                    <x:Double x:Key="ListViewItemMinHeight">0</x:Double>
                </ListView.Resources>
                <ListView.Header>
                    <UserControl>
                        <Grid Height="35"
                              Background="{ThemeResource ElementCustomAcrylicBrush}"
                              Windows11Present:Padding="12,0"
                              Windows11NotPresent:Padding="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="{Binding ElementName=ListViewPanelRoot,Path=DataContext.NameColumnWidth,Mode=TwoWay}" />
                                <ColumnDefinition Width="6" />
                                <ColumnDefinition Width="{Binding ElementName=ListViewPanelRoot,Path=DataContext.ModifiedColumnWidth,Mode=TwoWay}" />
                                <ColumnDefinition Width="6" />
                                <ColumnDefinition Width="{Binding ElementName=ListViewPanelRoot,Path=DataContext.TypeColumnWidth,Mode=TwoWay}" />
                                <ColumnDefinition Width="6" />
                                <ColumnDefinition Width="{Binding ElementName=ListViewPanelRoot,Path=DataContext.CompressedSizeColumnWidth,Mode=TwoWay}" />
                                <ColumnDefinition Width="6" />
                                <ColumnDefinition Width="{Binding ElementName=ListViewPanelRoot,Path=DataContext.SizeColumnWidth,Mode=TwoWay}" />
                                <ColumnDefinition Width="6" />
                                <ColumnDefinition Width="{Binding ElementName=ListViewPanelRoot,Path=DataContext.CompressRateColumnWidth,Mode=TwoWay}" />
                            </Grid.ColumnDefinitions>
                            <Grid.Resources>
                                <SolidColorBrush x:Key="SystemControlSplitterPointerOver"
                                                 Color="Transparent" />
                                <SolidColorBrush x:Key="SystemControlSplitterPressed"
                                                 Color="Transparent" />
                            </Grid.Resources>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup>
                                    <VisualState x:Name="NameSortIndicatorVisibleState">
                                        <VisualState.StateTriggers>
                                            <Trigger:IsEqualStateTrigger Value="{x:Bind ListViewHeaderSortIndicator.Target,Mode=OneWay}"
                                                                         To="Name" />
                                        </VisualState.StateTriggers>
                                        <VisualState.Setters>
                                            <Setter Target="NameSortIndicator.Visibility"
                                                    Value="Visible" />
                                            <Setter Target="ModifiedTimeSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="TypeSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="CompressedSizeSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="SizeSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="CompressionRateSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="ModifiedTimeSortIndicatorVisibleState">
                                        <VisualState.StateTriggers>
                                            <Trigger:IsEqualStateTrigger Value="{x:Bind ListViewHeaderSortIndicator.Target,Mode=OneWay}"
                                                                         To="ModifiedTime" />
                                        </VisualState.StateTriggers>
                                        <VisualState.Setters>
                                            <Setter Target="NameSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="ModifiedTimeSortIndicator.Visibility"
                                                    Value="Visible" />
                                            <Setter Target="TypeSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="CompressedSizeSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="SizeSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="CompressionRateSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="TypeSortIndicatorVisibleState">
                                        <VisualState.StateTriggers>
                                            <Trigger:IsEqualStateTrigger Value="{x:Bind ListViewHeaderSortIndicator.Target,Mode=OneWay}"
                                                                         To="Type" />
                                        </VisualState.StateTriggers>
                                        <VisualState.Setters>
                                            <Setter Target="NameSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="ModifiedTimeSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="TypeSortIndicator.Visibility"
                                                    Value="Visible" />
                                            <Setter Target="CompressedSizeSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="SizeSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="CompressionRateSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="CompressedSizeSortIndicatorVisibleState">
                                        <VisualState.StateTriggers>
                                            <Trigger:IsEqualStateTrigger Value="{x:Bind ListViewHeaderSortIndicator.Target,Mode=OneWay}"
                                                                         To="CompressedSize" />
                                        </VisualState.StateTriggers>
                                        <VisualState.Setters>
                                            <Setter Target="NameSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="ModifiedTimeSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="TypeSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="CompressedSizeSortIndicator.Visibility"
                                                    Value="Visible" />
                                            <Setter Target="SizeSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="CompressionRateSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="SizeSortIndicatorVisibleState">
                                        <VisualState.StateTriggers>
                                            <Trigger:IsEqualStateTrigger Value="{x:Bind ListViewHeaderSortIndicator.Target,Mode=OneWay}"
                                                                         To="Size" />
                                        </VisualState.StateTriggers>
                                        <VisualState.Setters>
                                            <Setter Target="NameSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="ModifiedTimeSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="TypeSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="CompressedSizeSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="SizeSortIndicator.Visibility"
                                                    Value="Visible" />
                                            <Setter Target="CompressionRateSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="CompressionRateSortIndicatorVisibleState">
                                        <VisualState.StateTriggers>
                                            <Trigger:IsEqualStateTrigger Value="{x:Bind ListViewHeaderSortIndicator.Target,Mode=OneWay}"
                                                                         To="CompressionRate" />
                                        </VisualState.StateTriggers>
                                        <VisualState.Setters>
                                            <Setter Target="NameSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="ModifiedTimeSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="TypeSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="CompressedSizeSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="SizeSortIndicator.Visibility"
                                                    Value="Collapsed" />
                                            <Setter Target="CompressionRateSortIndicator.Visibility"
                                                    Value="Visible" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup>
                                    <VisualState x:Name="SortIndicatorUpState">
                                        <VisualState.StateTriggers>
                                            <Trigger:IsEqualStateTrigger Value="{x:Bind ListViewHeaderSortIndicator.Direction,Mode=OneWay}"
                                                                         To="Ascending" />
                                        </VisualState.StateTriggers>
                                        <VisualState.Setters>
                                            <Setter Target="NameSortIndicatorIcon.Glyph"
                                                    Value="&#xF0AD;" />
                                            <Setter Target="ModifiedTimeSortIndicatorIcon.Glyph"
                                                    Value="&#xF0AD;" />
                                            <Setter Target="TypeSortIndicatorIcon.Glyph"
                                                    Value="&#xF0AD;" />
                                            <Setter Target="CompressedSizeSortIndicatorIcon.Glyph"
                                                    Value="&#xF0AD;" />
                                            <Setter Target="SizeSortIndicatorIcon.Glyph"
                                                    Value="&#xF0AD;" />
                                            <Setter Target="CompressionRateSortIndicatorIcon.Glyph"
                                                    Value="&#xF0AD;" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="SortIndicatorDownState">
                                        <VisualState.StateTriggers>
                                            <Trigger:IsEqualStateTrigger Value="{x:Bind ListViewHeaderSortIndicator.Direction,Mode=OneWay}"
                                                                         To="Descending" />
                                        </VisualState.StateTriggers>
                                        <VisualState.Setters>
                                            <Setter Target="NameSortIndicatorIcon.Glyph"
                                                    Value="&#xF0AE;" />
                                            <Setter Target="ModifiedTimeSortIndicatorIcon.Glyph"
                                                    Value="&#xF0AE;" />
                                            <Setter Target="TypeSortIndicatorIcon.Glyph"
                                                    Value="&#xF0AE;" />
                                            <Setter Target="CompressedSizeSortIndicatorIcon.Glyph"
                                                    Value="&#xF0AE;" />
                                            <Setter Target="SizeSortIndicatorIcon.Glyph"
                                                    Value="&#xF0AE;" />
                                            <Setter Target="CompressionRateSortIndicatorIcon.Glyph"
                                                    Value="&#xF0AE;" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Button Height="35"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    x:Name="ListHeaderName"
                                    Click="ListHeader_Click"
                                    Style="{StaticResource ListHeaderButtonStyle}">
                                <RelativePanel>
                                    <TextBlock Text="名称"
                                               x:Uid="SearchName"
                                               TextTrimming="CharacterEllipsis"
                                               RelativePanel.LeftOf="NameSortIndicator"
                                               RelativePanel.AlignLeftWithPanel="True"
                                               RelativePanel.AlignVerticalCenterWithPanel="True" />
                                    <Viewbox RelativePanel.AlignRightWithPanel="True"
                                             RelativePanel.AlignVerticalCenterWithPanel="True"
                                             x:Name="NameSortIndicator"
                                             Height="12"
                                             Width="12"
                                             Margin="10,0,0,0">
                                        <FontIcon x:Name="NameSortIndicatorIcon" />
                                    </Viewbox>
                                </RelativePanel>
                            </Button>
                            <Border HorizontalAlignment="Center"
                                    VerticalAlignment="Stretch"
                                    Grid.Column="1"
                                    Width="1.5"
                                    Margin="0,5"
                                    Background="Gray" />
                            <controls:GridSplitter Grid.Column="1"
                                                   MinWidth="0"
                                                   Background="Transparent"
                                                   ResizeBehavior="PreviousAndNext"
                                                   ResizeDirection="Auto"
                                                   IsTabStop="False">
                                <controls:GridSplitter.Element>
                                    <StackPanel />
                                </controls:GridSplitter.Element>
                            </controls:GridSplitter>
                            <Button Height="35"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    Grid.Column="2"
                                    Click="ListHeader_Click"
                                    Name="ListHeaderModifiedTime"
                                    Style="{StaticResource ListHeaderButtonStyle}">
                                <RelativePanel>
                                    <TextBlock Text="修改日期"
                                               x:Uid="SearchModified"
                                               TextTrimming="CharacterEllipsis"
                                               RelativePanel.LeftOf="ModifiedTimeSortIndicator"
                                               RelativePanel.AlignLeftWithPanel="True"
                                               RelativePanel.AlignVerticalCenterWithPanel="True" />
                                    <Viewbox RelativePanel.AlignRightWithPanel="True"
                                             RelativePanel.AlignVerticalCenterWithPanel="True"
                                             x:Name="ModifiedTimeSortIndicator"
                                             Height="12"
                                             Width="12"
                                             Margin="10,0,0,0">
                                        <FontIcon x:Name="ModifiedTimeSortIndicatorIcon" />
                                    </Viewbox>
                                </RelativePanel>
                            </Button>
                            <Border HorizontalAlignment="Center"
                                    VerticalAlignment="Stretch"
                                    Grid.Column="3"
                                    Width="1.5"
                                    Margin="0,5"
                                    Background="Gray" />
                            <controls:GridSplitter Grid.Column="3"
                                                   MinWidth="0"
                                                   Background="Transparent"
                                                   ResizeBehavior="PreviousAndNext"
                                                   ResizeDirection="Auto"
                                                   IsTabStop="False">
                                <controls:GridSplitter.Element>
                                    <StackPanel />
                                </controls:GridSplitter.Element>
                            </controls:GridSplitter>
                            <Button Height="35"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    Grid.Column="4"
                                    Click="ListHeader_Click"
                                    Name="ListHeaderType"
                                    Style="{StaticResource ListHeaderButtonStyle}">
                                <RelativePanel>
                                    <TextBlock Text="类型"
                                               x:Uid="SearchType"
                                               TextTrimming="CharacterEllipsis"
                                               RelativePanel.LeftOf="TypeSortIndicator"
                                               RelativePanel.AlignLeftWithPanel="True"
                                               RelativePanel.AlignVerticalCenterWithPanel="True" />
                                    <Viewbox RelativePanel.AlignRightWithPanel="True"
                                             RelativePanel.AlignVerticalCenterWithPanel="True"
                                             x:Name="TypeSortIndicator"
                                             Height="12"
                                             Width="12"
                                             Margin="10,0,0,0">
                                        <FontIcon x:Name="TypeSortIndicatorIcon" />
                                    </Viewbox>
                                </RelativePanel>
                            </Button>
                            <Border HorizontalAlignment="Center"
                                    VerticalAlignment="Stretch"
                                    Grid.Column="5"
                                    Width="1.5"
                                    Margin="0,5"
                                    Background="Gray" />
                            <controls:GridSplitter Grid.Column="5"
                                                   MinWidth="0"
                                                   Background="Transparent"
                                                   ResizeBehavior="PreviousAndNext"
                                                   ResizeDirection="Auto"
                                                   IsTabStop="False">
                                <controls:GridSplitter.Element>
                                    <StackPanel />
                                </controls:GridSplitter.Element>
                            </controls:GridSplitter>
                            <Button Height="35"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    Grid.Column="6"
                                    Click="ListHeader_Click"
                                    Name="ListHeaderCompressedSize"
                                    Style="{StaticResource ListHeaderButtonStyle}">
                                <RelativePanel>
                                    <TextBlock Text="压缩大小"
                                               x:Uid="CompressedSize"
                                               TextTrimming="CharacterEllipsis"
                                               RelativePanel.LeftOf="CompressedSizeSortIndicator"
                                               RelativePanel.AlignLeftWithPanel="True"
                                               RelativePanel.AlignVerticalCenterWithPanel="True" />
                                    <Viewbox RelativePanel.AlignRightWithPanel="True"
                                             RelativePanel.AlignVerticalCenterWithPanel="True"
                                             x:Name="CompressedSizeSortIndicator"
                                             Height="12"
                                             Width="12"
                                             Margin="10,0,0,0">
                                        <FontIcon x:Name="CompressedSizeSortIndicatorIcon" />
                                    </Viewbox>
                                </RelativePanel>
                            </Button>
                            <Border HorizontalAlignment="Center"
                                    VerticalAlignment="Stretch"
                                    Grid.Column="7"
                                    Width="1.5"
                                    Margin="0,5"
                                    Background="Gray" />
                            <controls:GridSplitter Grid.Column="7"
                                                   MinWidth="0"
                                                   Background="Transparent"
                                                   ResizeBehavior="PreviousAndNext"
                                                   ResizeDirection="Auto"
                                                   IsTabStop="False">
                                <controls:GridSplitter.Element>
                                    <StackPanel />
                                </controls:GridSplitter.Element>
                            </controls:GridSplitter>
                            <Button Height="35"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    Grid.Column="8"
                                    Name="ListHeaderSize"
                                    Click="ListHeader_Click"
                                    Style="{StaticResource ListHeaderButtonStyle}">
                                <RelativePanel>
                                    <TextBlock Text="实际大小"
                                               x:Uid="ActualSize"
                                               TextTrimming="CharacterEllipsis"
                                               RelativePanel.LeftOf="SizeSortIndicator"
                                               RelativePanel.AlignLeftWithPanel="True"
                                               RelativePanel.AlignVerticalCenterWithPanel="True" />
                                    <Viewbox RelativePanel.AlignRightWithPanel="True"
                                             RelativePanel.AlignVerticalCenterWithPanel="True"
                                             x:Name="SizeSortIndicator"
                                             Height="12"
                                             Width="12"
                                             Margin="10,0,0,0">
                                        <FontIcon x:Name="SizeSortIndicatorIcon" />
                                    </Viewbox>
                                </RelativePanel>
                            </Button>
                            <Border HorizontalAlignment="Center"
                                    VerticalAlignment="Stretch"
                                    Grid.Column="9"
                                    Width="1.5"
                                    Margin="0,5"
                                    Background="Gray" />
                            <controls:GridSplitter Grid.Column="9"
                                                   MinWidth="0"
                                                   Background="Transparent"
                                                   ResizeBehavior="PreviousAndNext"
                                                   ResizeDirection="Auto"
                                                   IsTabStop="False">
                                <controls:GridSplitter.Element>
                                    <StackPanel />
                                </controls:GridSplitter.Element>
                            </controls:GridSplitter>
                            <Button Height="35"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    Grid.Column="10"
                                    Name="ListHeaderCompressionRate"
                                    Click="ListHeader_Click"
                                    Style="{StaticResource ListHeaderButtonStyle}">
                                <RelativePanel>
                                    <TextBlock Text="压缩比率"
                                               x:Uid="CompressionRate"
                                               TextTrimming="CharacterEllipsis"
                                               RelativePanel.LeftOf="CompressionRateSortIndicator"
                                               RelativePanel.AlignLeftWithPanel="True"
                                               RelativePanel.AlignVerticalCenterWithPanel="True" />
                                    <Viewbox RelativePanel.AlignRightWithPanel="True"
                                             RelativePanel.AlignVerticalCenterWithPanel="True"
                                             x:Name="CompressionRateSortIndicator"
                                             Height="12"
                                             Width="12"
                                             Margin="10,0,0,0">
                                        <FontIcon x:Name="CompressionRateSortIndicatorIcon" />
                                    </Viewbox>
                                </RelativePanel>
                            </Button>
                        </Grid>
                    </UserControl>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="Cls:CompressionItemBase">
                        <Grid Background="Transparent"
                              Padding="{Binding ElementName=PageRoot,Path=DataContext.LineHeightOffset}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="{Binding ElementName=ListViewPanelRoot,Path=DataContext.NameColumnWidth}" />
                                <ColumnDefinition Width="6" />
                                <ColumnDefinition Width="{Binding ElementName=ListViewPanelRoot,Path=DataContext.ModifiedColumnWidth}" />
                                <ColumnDefinition Width="6" />
                                <ColumnDefinition Width="{Binding ElementName=ListViewPanelRoot,Path=DataContext.TypeColumnWidth}" />
                                <ColumnDefinition Width="6" />
                                <ColumnDefinition Width="{Binding ElementName=ListViewPanelRoot,Path=DataContext.CompressedSizeColumnWidth}" />
                                <ColumnDefinition Width="6" />
                                <ColumnDefinition Width="{Binding ElementName=ListViewPanelRoot,Path=DataContext.SizeColumnWidth}" />
                                <ColumnDefinition Width="6" />
                                <ColumnDefinition Width="{Binding ElementName=ListViewPanelRoot,Path=DataContext.CompressRateColumnWidth}" />
                            </Grid.ColumnDefinitions>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="45" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Image VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Stretch="Uniform"
                                       Source="{x:Bind Thumbnail,Mode=OneWay}"
                                       Height="30"
                                       Width="30" />
                                <TextBlock VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Grid.Column="1"
                                           Text="{x:Bind Name}"
                                           TextTrimming="CharacterEllipsis"
                                           x:Name="NameLabel">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Content="{x:Bind Name}"
                                                 Visibility="{Binding ElementName=NameLabel,Path=IsTextTrimmed}" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </Grid>
                            <TextBlock VerticalAlignment="Center"
                                       Padding="10,0,0,0"
                                       HorizontalAlignment="Left"
                                       Name="ModifiedTimeLabel"
                                       Text="{x:Bind ModifiedTime,Converter={StaticResource DateTimeConverter}}"
                                       Grid.Column="2"
                                       TextTrimming="CharacterEllipsis">
                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{x:Bind ModifiedTime,Converter={StaticResource DateTimeConverter}}"
                                             Visibility="{Binding ElementName=ModifiedTimeLabel,Path=IsTextTrimmed}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>
                            <TextBlock VerticalAlignment="Center"
                                       Padding="10,0,0,0"
                                       HorizontalAlignment="Left"
                                       Text="{x:Bind DisplayType,Mode=OneWay}"
                                       Grid.Column="4"
                                       Name="TypeLabel"
                                       TextTrimming="CharacterEllipsis">
                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{x:Bind DisplayType,Mode=OneWay}"
                                             Visibility="{Binding ElementName=TypeLabel,Path=IsTextTrimmed}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>
                            <TextBlock VerticalAlignment="Center"
                                       Padding="10,0,0,0"
                                       HorizontalAlignment="Left"
                                       Visibility="{Binding Mode=OneTime,Converter={StaticResource SizeVisibilityConverter}}"
                                       Text="{x:Bind CompressedSize,Converter={StaticResource SizeConverter}}"
                                       Name="CompressedSizeLabel"
                                       TextTrimming="CharacterEllipsis"
                                       Grid.Column="6">
                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{x:Bind CompressedSize,Converter={StaticResource SizeConverter}}"
                                             Visibility="{Binding ElementName=CompressedSizeLabel,Path=IsTextTrimmed}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>
                            <TextBlock VerticalAlignment="Center"
                                       Padding="10,0,0,0"
                                       HorizontalAlignment="Left"
                                       Visibility="{Binding Mode=OneTime,Converter={StaticResource SizeVisibilityConverter}}"
                                       Text="{x:Bind Size,Converter={StaticResource SizeConverter}}"
                                       TextTrimming="CharacterEllipsis"
                                       Name="SizeLabel"
                                       Grid.Column="8">
                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{x:Bind Size,Converter={StaticResource SizeConverter}}"
                                             Visibility="{Binding ElementName=SizeLabel,Path=IsTextTrimmed}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>
                            <TextBlock VerticalAlignment="Center"
                                       Padding="10,0,0,0"
                                       HorizontalAlignment="Left"
                                       Visibility="{Binding Mode=OneTime,Converter={StaticResource SizeVisibilityConverter}}"
                                       Text="{x:Bind CompressionRate,Converter={StaticResource CompressionRateConverter}}"
                                       TextTrimming="CharacterEllipsis"
                                       Name="CompressionRateLabel"
                                       Grid.Column="10">
                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{x:Bind CompressionRate,Converter={StaticResource CompressionRateConverter}}"
                                             Visibility="{Binding ElementName=CompressionRateLabel,Path=IsTextTrimmed}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Canvas Grid.Row="1">
                <Rectangle Fill="{ThemeResource SystemAccentColorDark2}"
                           Stroke="{ThemeResource SystemAccentColorLight2}"
                           x:Name="DrawRectangle"
                           Opacity="0.4" />
            </Canvas>
        </Grid>
        <TextBlock Name="HasFile"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   x:Uid="HasFile"
                   Text="无文件"
                   Grid.Row="1"
                   FontSize="18"
                   Visibility="Collapsed" />
        <controls:Loading x:Name="LoadingControl"
                          IsLoading="False"
                          Grid.RowSpan="2">
            <controls:Loading.Background>
                <Brush:AcrylicBrush TintColor="{ThemeResource SystemAltHighColor}"
                                    TintOpacity="0.6"
                                    BlurAmount="3" />
            </controls:Loading.Background>
            <StackPanel>
                <TextBlock FontSize="16"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           Name="ProgressInfo" />
                <muxc:ProgressBar Width="200"
                                  Name="ProBar"
                                  Margin="0,10,0,0" />
                <Button Content="{x:Bind Cls:Globalization.GetString('Common_Dialog_CancelButton')}"
                        Margin="0,10,0,0"
                        Name="CancelButton"
                        FontSize="12"
                        HorizontalAlignment="Stretch"
                        Click="CancelButton_Click"
                        Style="{ThemeResource ButtonRevealStyle}" />
            </StackPanel>
        </controls:Loading>
    </Grid>
</Page>
