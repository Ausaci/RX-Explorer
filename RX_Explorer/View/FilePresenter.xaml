<Page x:Class="RX_Explorer.View.FilePresenter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
      xmlns:Cls="using:RX_Explorer.Class"
      xmlns:System="using:System"
      xmlns:local="using:RX_Explorer.View"
      xmlns:Data="using:Windows.UI.Xaml.Data"
      xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:Windows11Present="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract,11)"
      xmlns:Windows11NotPresent="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractNotPresent(Windows.Foundation.UniversalApiContract,11)"
      mc:Ignorable="d"
      Background="Transparent">

    <Page.Resources>
        <Cls:ThumbnailStatusConverter x:Key="ThumbnailStatusConverter" />
        <Cls:SizeDescriptionConverter x:Key="SizeConverter" />
        <Cls:SizeLabelVisibilityConverter x:Key="SizeVisibilityConverter" />
        <Cls:DateTimeDescriptionConverter x:Key="DateTimeConverter" />
        <Cls:AnimationStyleSelector x:Key="AnimationStyleSelector" />
        <Cls:TagToColorConverter x:Key="TagToColorConverter" />
        <Cls:TagToLabelConverter x:Key="TagToLabelConverter" />
        <Cls:NameExtensionsConverter x:Name="NameExtensionsConverter"
                                     ItemsSource="{x:Bind FileCollection}" />

        <CollectionViewSource x:Name="CollectionVS"
                              IsSourceGrouped="False" />

        <muxc:TeachingTip x:Name="InvalidCharTip"
                          IsLightDismissEnabled="True"
                          x:Uid="PresentInvalidCharTip"
                          Title="错误"
                          Subtitle="不能包含非法字符&#x000A;非法字符包括 \ / : * ? &quot; &lt; &gt; |" />

        <muxc:TeachingTip x:Name="InvalidNameTip"
                          IsLightDismissEnabled="True"
                          x:Uid="PresentInvalidNameTip"
                          Title="错误"
                          Subtitle="名称不能为空且不能包含无效的名称" />

        <Flyout x:Name="TooltipFlyout"
                ShouldConstrainToRootBounds="False">
            <Flyout.FlyoutPresenterStyle>
                <Style TargetType="FlyoutPresenter">
                    <Setter Property="Background"
                            Value="{ThemeResource SystemControlChromeHighAcrylicElementMediumBrush}" />
                    <Setter Property="Padding"
                            Value="5" />
                    <Setter Property="CornerRadius"
                            Value="{StaticResource CustomCornerRadius}" />
                    <Setter Property="MinHeight"
                            Value="0" />
                </Style>
            </Flyout.FlyoutPresenterStyle>
            <StackPanel>
                <TextBlock x:Name="TooltipFlyoutText"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="Wrap"
                           IsTextSelectionEnabled="True"
                           MaxWidth="400" />
            </StackPanel>
        </Flyout>

        <Cls:InverseConverter x:Key="InverseConverter" />
        <Cls:SyncStatusIconConverter x:Key="SyncStatusIconConverter" />
        <Cls:SyncStatusColorConverter x:Key="SyncStatusColorConverter" />
        <Cls:SyncStatusVisibilityConverter x:Key="SyncStatusVisibilityConverter" />
        <Cls:SyncStatusToolTipConverter x:Key="SyncStatusToolTipConverter" />

        <muxc:TeachingTip PreferredPlacement="Auto"
                          Title="WIFI分享"
                          x:Uid="WIFIShareTip"
                          HeroContentPlacement="Auto"
                          Closing="QRTeachTip_Closing"
                          x:Name="QRTeachTip">
            <muxc:TeachingTip.HeroContent>
                <Image Stretch="UniformToFill"
                       Name="QRImage" />
            </muxc:TeachingTip.HeroContent>
            <muxc:TeachingTip.Content>
                <StackPanel HorizontalAlignment="Stretch">
                    <RelativePanel HorizontalAlignment="Stretch">
                        <TextBox Name="QRText"
                                 RelativePanel.LeftOf="CopyLinkButton"
                                 RelativePanel.AlignBottomWithPanel="True"
                                 RelativePanel.AlignLeftWithPanel="True"
                                 x:Uid="QRText"
                                 IsSpellCheckEnabled="False"
                                 IsReadOnly="True"
                                 Header="复制此链接至浏览器即可下载"
                                 GotFocus="QRText_GotFocus" />
                        <Button VerticalAlignment="Bottom"
                                RelativePanel.AlignRightWithPanel="True"
                                RelativePanel.AlignBottomWithPanel="True"
                                Margin="5,0,0,0"
                                Name="CopyLinkButton"
                                Click="CopyLinkButton_Click">
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xE8C8;" />
                        </Button>
                    </RelativePanel>
                    <TextBlock Margin="0,10,0,0"
                               x:Uid="WIFIShareText"
                               TextWrapping="WrapWholeWords"
                               Text="传输过程中请勿关闭此窗口，否则将停止分享" />
                </StackPanel>
            </muxc:TeachingTip.Content>
        </muxc:TeachingTip>
    </Page.Resources>

    <Grid>
        <controls:SwitchPresenter Name="PageSwitcher">
            <controls:Case Value="{x:Bind Cls:RootStorageFolder.Current.Path}">
                <local:Home HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            x:Name="RootFolderControl"
                            x:FieldModifier="public" />
            </controls:Case>
            <controls:Case IsDefault="True">
                <Grid PointerWheelChanged="Presenter_PointerWheelChanged">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <muxc:ProgressBar IsIndeterminate="True"
                                      Height="4"
                                      HorizontalAlignment="Stretch"
                                      Visibility="Collapsed"
                                      Name="FileLoadProgress" />

                    <controls:SwitchPresenter Name="ViewModeSwitcher"
                                              Grid.Row="1">
                        <controls:Case Value="GridViewTilesControl">
                            <SemanticZoom>
                                <SemanticZoom.ZoomedInView>
                                    <GridView Name="GridViewTilesControl"
                                              SelectionMode="Extended"
                                              CanDrag="False"
                                              CanReorderItems="False"
                                              AllowDrop="True"
                                              IsItemClickEnabled="True"
                                              IsDoubleTapEnabled="True"
                                              ShowsScrollingPlaceholders="False"
                                              Drop="ViewControl_Drop"
                                              DragOver="ViewControl_DragOver"
                                              DoubleTapped="ViewControl_DoubleTapped"
                                              PreviewKeyDown="ViewControl_PreviewKeyDown"
                                              ItemClick="ViewControl_ItemClick"
                                              ContextRequested="ViewControl_ContextRequested"
                                              ContextCanceled="ViewControl_ContextCanceled"
                                              SelectionChanged="ViewControl_SelectionChanged"
                                              ContainerContentChanging="ViewControl_ContainerContentChanging"
                                              Windows11NotPresent:ItemContainerStyleSelector="{StaticResource AnimationStyleSelector}"
                                              ItemsSource="{x:Bind CollectionVS.View,Mode=OneWay}"
                                              ItemContainerTransitions="{x:Bind Cls:AnimationController.Current.RepositionTransitions,Mode=OneWay}"
                                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                              ScrollViewer.HorizontalScrollMode="Disabled"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                              ScrollViewer.VerticalScrollMode="Auto">
                                        <GridView.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <ItemsWrapGrid Orientation="Horizontal"
                                                               AreStickyGroupHeadersEnabled="True"
                                                               HorizontalAlignment="Stretch" />
                                            </ItemsPanelTemplate>
                                        </GridView.ItemsPanel>
                                        <Windows11Present:GridView.ItemContainerStyle>
                                            <Style TargetType="GridViewItem"
                                                   BasedOn="{StaticResource DefaultGridViewItemStyle}">
                                                <Setter Property="HorizontalContentAlignment"
                                                        Value="Stretch" />
                                            </Style>
                                        </Windows11Present:GridView.ItemContainerStyle>
                                        <GridView.ItemTemplate>
                                            <DataTemplate x:DataType="Cls:FileSystemStorageItemBase">
                                                <Grid Padding="5"
                                                      Width="250"
                                                      Background="Transparent">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="60" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <Border Padding="3,0"
                                                            ToolTipService.ToolTip="{x:Bind SyncStatus,Mode=OneWay,Converter={StaticResource SyncStatusToolTipConverter}}"
                                                            Visibility="{x:Bind SyncStatus,Mode=OneWay,Converter={StaticResource SyncStatusVisibilityConverter}}">
                                                        <Viewbox MaxWidth="15"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center">
                                                            <FontIcon Glyph="{x:Bind SyncStatus,Mode=OneWay,Converter={StaticResource SyncStatusIconConverter}}"
                                                                      Foreground="{x:Bind SyncStatus,Mode=OneWay,Converter={StaticResource SyncStatusColorConverter}}" />
                                                        </Viewbox>
                                                    </Border>
                                                    <Image HorizontalAlignment="Center"
                                                           Stretch="Uniform"
                                                           Source="{x:Bind Thumbnail,Mode=OneWay}"
                                                           Opacity="{x:Bind ThumbnailStatus,Mode=OneWay,Converter={StaticResource ThumbnailStatusConverter}}"
                                                           Height="55"
                                                           Width="55"
                                                           Grid.Column="1"
                                                           x:Phase="1" />
                                                    <Image x:Name="ThumbnailOverlay"
                                                           Width="35"
                                                           Height="35"
                                                           HorizontalAlignment="Left"
                                                           VerticalAlignment="Bottom"
                                                           Grid.Column="1"
                                                           x:Phase="1"
                                                           Source="{x:Bind ThumbnailOverlay,Mode=OneWay}"
                                                           Opacity="{x:Bind ThumbnailStatus,Mode=OneWay,Converter={StaticResource ThumbnailStatusConverter}}"
                                                           Stretch="Uniform" />
                                                    <StackPanel Orientation="Vertical"
                                                                Grid.Column="2"
                                                                VerticalAlignment="Top"
                                                                Margin="5,0,0,0">
                                                        <TextBlock Text="{x:Bind DisplayName,Mode=OneWay,Converter={StaticResource NameExtensionsConverter}}"
                                                                   Visibility="{Binding ElementName=NameEditBox,Path=Visibility,Mode=OneWay,Converter={StaticResource InverseConverter}}"
                                                                   HorizontalTextAlignment="Left"
                                                                   HorizontalAlignment="Stretch"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   x:Name="NameLabel"
                                                                   PointerPressed="NameLabel_PointerPressed">
                                                            <ToolTipService.ToolTip>
                                                                <ToolTip Content="{x:Bind DisplayName,Mode=OneWay,Converter={StaticResource NameExtensionsConverter}}"
                                                                         Visibility="{Binding ElementName=NameLabel,Path=IsTextTrimmed}" />
                                                            </ToolTipService.ToolTip>
                                                        </TextBlock>
                                                        <TextBox x:Name="NameEditBox"
                                                                 Text="{x:Bind DisplayName,Mode=OneWay,Converter={StaticResource NameExtensionsConverter}}"
                                                                 IsSpellCheckEnabled="False"
                                                                 Visibility="Collapsed"
                                                                 HorizontalAlignment="Stretch"
                                                                 VerticalAlignment="Center" />
                                                        <TextBlock Text="{x:Bind DisplayType,Mode=OneWay}"
                                                                   FontSize="12"
                                                                   x:Phase="1"
                                                                   Name="DisplayTypeLabel"
                                                                   HorizontalTextAlignment="Left"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   HorizontalAlignment="Left"
                                                                   MaxWidth="145">
                                                            <ToolTipService.ToolTip>
                                                                <ToolTip Content="{x:Bind DisplayType,Mode=OneWay}"
                                                                         Visibility="{Binding ElementName=DisplayTypeLabel,Path=IsTextTrimmed}" />
                                                            </ToolTipService.ToolTip>
                                                        </TextBlock>
                                                        <TextBlock Text="{x:Bind Size,Mode=OneWay,Converter={StaticResource SizeConverter}}"
                                                                   Visibility="{Binding Mode=OneTime,Converter={StaticResource SizeVisibilityConverter}}"
                                                                   FontSize="12"
                                                                   Name="SizeLabel"
                                                                   HorizontalTextAlignment="Left"
                                                                   HorizontalAlignment="Left"
                                                                   TextTrimming="CharacterEllipsis">
                                                            <ToolTipService.ToolTip>
                                                                <ToolTip Content="{x:Bind Size,Mode=OneWay,Converter={StaticResource SizeConverter}}"
                                                                         Visibility="{Binding ElementName=SizeLabel,Path=IsTextTrimmed}" />
                                                            </ToolTipService.ToolTip>
                                                        </TextBlock>
                                                    </StackPanel>
                                                    <Border Grid.Column="3"
                                                            CornerRadius="2"
                                                            Margin="5,4"
                                                            Width="4"
                                                            Background="{x:Bind Label,Mode=OneWay,Converter={StaticResource TagToColorConverter}}"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Stretch" />
                                                </Grid>
                                            </DataTemplate>
                                        </GridView.ItemTemplate>
                                        <GridView.GroupStyle>
                                            <GroupStyle HidesIfEmpty="True">
                                                <GroupStyle.HeaderTemplate>
                                                    <DataTemplate x:DataType="Cls:FileSystemStorageGroupItem">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{x:Bind Key}"
                                                                       FontSize="18" />
                                                            <TextBlock Margin="5,0,0,0"
                                                                       VerticalAlignment="Center"
                                                                       Text="{x:Bind Description,Mode=OneWay}" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </GroupStyle.HeaderTemplate>
                                            </GroupStyle>
                                        </GridView.GroupStyle>
                                    </GridView>
                                </SemanticZoom.ZoomedInView>
                                <SemanticZoom.ZoomedOutView>
                                    <ListView ItemsSource="{x:Bind CollectionVS.View.CollectionGroups,Mode=OneWay}"
                                              SelectionMode="None">
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="Data:ICollectionViewGroup">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{x:Bind Group.(Cls:FileSystemStorageGroupItem.Key)}"
                                                               FontSize="18" />
                                                    <TextBlock Margin="5,0,0,0"
                                                               VerticalAlignment="Center"
                                                               Text="{x:Bind Group.(Cls:FileSystemStorageGroupItem.Description),Mode=OneWay}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </SemanticZoom.ZoomedOutView>
                            </SemanticZoom>
                        </controls:Case>
                        <controls:Case Value="GridViewListControl">
                            <SemanticZoom>
                                <SemanticZoom.ZoomedInView>
                                    <GridView Name="GridViewListControl"
                                              SelectionMode="Extended"
                                              CanDrag="False"
                                              CanReorderItems="False"
                                              AllowDrop="True"
                                              IsItemClickEnabled="True"
                                              IsDoubleTapEnabled="True"
                                              ShowsScrollingPlaceholders="False"
                                              Drop="ViewControl_Drop"
                                              DragOver="ViewControl_DragOver"
                                              DoubleTapped="ViewControl_DoubleTapped"
                                              PreviewKeyDown="ViewControl_PreviewKeyDown"
                                              ItemClick="ViewControl_ItemClick"
                                              ContextRequested="ViewControl_ContextRequested"
                                              ContextCanceled="ViewControl_ContextCanceled"
                                              SelectionChanged="ViewControl_SelectionChanged"
                                              ContainerContentChanging="ViewControl_ContainerContentChanging"
                                              Windows11NotPresent:ItemContainerStyleSelector="{StaticResource AnimationStyleSelector}"
                                              ItemsSource="{x:Bind CollectionVS.View,Mode=OneWay}"
                                              ItemContainerTransitions="{x:Bind Cls:AnimationController.Current.RepositionTransitions,Mode=OneWay}"
                                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                              ScrollViewer.HorizontalScrollMode="Auto"
                                              ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                              ScrollViewer.VerticalScrollMode="Disabled">
                                        <GridView.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <ItemsWrapGrid Orientation="Vertical"
                                                               AreStickyGroupHeadersEnabled="True"
                                                               HorizontalAlignment="Stretch" />
                                            </ItemsPanelTemplate>
                                        </GridView.ItemsPanel>
                                        <Windows11Present:GridView.ItemContainerStyle>
                                            <Style TargetType="GridViewItem"
                                                   BasedOn="{StaticResource DefaultGridViewItemStyle}">
                                                <Setter Property="HorizontalContentAlignment"
                                                        Value="Left" />
                                            </Style>
                                        </Windows11Present:GridView.ItemContainerStyle>
                                        <GridView.ItemTemplate>
                                            <DataTemplate x:DataType="Cls:FileSystemStorageItemBase">
                                                <Grid Padding="5"
                                                      Width="300"
                                                      Background="Transparent">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="40" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <Border Padding="3,0"
                                                            ToolTipService.ToolTip="{x:Bind SyncStatus,Mode=OneWay,Converter={StaticResource SyncStatusToolTipConverter}}"
                                                            Visibility="{x:Bind SyncStatus,Mode=OneWay,Converter={StaticResource SyncStatusVisibilityConverter}}">
                                                        <Viewbox MaxWidth="15"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center">
                                                            <FontIcon Glyph="{x:Bind SyncStatus,Mode=OneWay,Converter={StaticResource SyncStatusIconConverter}}"
                                                                      Foreground="{x:Bind SyncStatus,Mode=OneWay,Converter={StaticResource SyncStatusColorConverter}}" />
                                                        </Viewbox>
                                                    </Border>
                                                    <Image VerticalAlignment="Center"
                                                           Stretch="Uniform"
                                                           Source="{x:Bind Thumbnail,Mode=OneWay}"
                                                           Opacity="{x:Bind ThumbnailStatus,Mode=OneWay,Converter={StaticResource ThumbnailStatusConverter}}"
                                                           Height="30"
                                                           Width="30"
                                                           Grid.Column="1"
                                                           x:Phase="1"
                                                           PointerPressed="GetFocus_PointerPressed" />
                                                    <Image x:Name="ThumbnailOverlay"
                                                           Margin="2,0,0,0"
                                                           Width="25"
                                                           Height="25"
                                                           HorizontalAlignment="Left"
                                                           VerticalAlignment="Bottom"
                                                           Grid.Column="1"
                                                           x:Phase="1"
                                                           Source="{x:Bind ThumbnailOverlay, Mode=OneWay}"
                                                           Opacity="{x:Bind ThumbnailStatus,Mode=OneWay,Converter={StaticResource ThumbnailStatusConverter}}"
                                                           Stretch="Uniform" />
                                                    <TextBlock VerticalAlignment="Center"
                                                               HorizontalAlignment="Left"
                                                               Text="{x:Bind DisplayName,Mode=OneWay,Converter={StaticResource NameExtensionsConverter}}"
                                                               Visibility="{Binding ElementName=NameEditBox,Path=Visibility,Mode=OneWay,Converter={StaticResource InverseConverter}}"
                                                               TextTrimming="CharacterEllipsis"
                                                               Grid.Column="2"
                                                               PointerPressed="NameLabel_PointerPressed"
                                                               x:Name="NameLabel">
                                                        <ToolTipService.ToolTip>
                                                            <ToolTip Content="{x:Bind DisplayName,Mode=OneWay,Converter={StaticResource NameExtensionsConverter}}"
                                                                     Visibility="{Binding ElementName=NameLabel,Path=IsTextTrimmed}" />
                                                        </ToolTipService.ToolTip>
                                                    </TextBlock>
                                                    <TextBox VerticalAlignment="Center"
                                                             HorizontalAlignment="Stretch"
                                                             x:Name="NameEditBox"
                                                             Text="{x:Bind DisplayName,Mode=OneWay,Converter={StaticResource NameExtensionsConverter}}"
                                                             Grid.Column="2"
                                                             IsSpellCheckEnabled="False"
                                                             Visibility="Collapsed" />
                                                    <Border Grid.Column="3"
                                                            CornerRadius="2"
                                                            Margin="5,4"
                                                            Width="4"
                                                            Background="{x:Bind Label,Mode=OneWay,Converter={StaticResource TagToColorConverter}}"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Stretch" />
                                                    <TextBlock Grid.Column="4"
                                                               Name="TagLabel"
                                                               Margin="5,5,0,5"
                                                               MaxWidth="100"
                                                               VerticalAlignment="Stretch"
                                                               TextTrimming="CharacterEllipsis"
                                                               Foreground="{x:Bind Label,Mode=OneWay,Converter={StaticResource TagToColorConverter}}"
                                                               Text="{x:Bind Label,Mode=OneWay,Converter={StaticResource TagToLabelConverter}}">
                                                        <ToolTipService.ToolTip>
                                                            <ToolTip Content="{Binding ElementName=TagLabel,Path=Text}"
                                                                     Visibility="{Binding ElementName=TagLabel,Path=IsTextTrimmed}" />
                                                        </ToolTipService.ToolTip>
                                                    </TextBlock>
                                                </Grid>
                                            </DataTemplate>
                                        </GridView.ItemTemplate>
                                        <GridView.GroupStyle>
                                            <GroupStyle HidesIfEmpty="True">
                                                <GroupStyle.HeaderTemplate>
                                                    <DataTemplate x:DataType="Cls:FileSystemStorageGroupItem">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{x:Bind Key}"
                                                                       FontSize="18" />
                                                            <TextBlock Margin="5,0,0,0"
                                                                       VerticalAlignment="Center"
                                                                       Text="{x:Bind Description,Mode=OneWay}" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </GroupStyle.HeaderTemplate>
                                            </GroupStyle>
                                        </GridView.GroupStyle>
                                    </GridView>
                                </SemanticZoom.ZoomedInView>
                                <SemanticZoom.ZoomedOutView>
                                    <ListView ItemsSource="{x:Bind CollectionVS.View.CollectionGroups,Mode=OneWay}"
                                              SelectionMode="None">
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="Data:ICollectionViewGroup">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{x:Bind Group.(Cls:FileSystemStorageGroupItem.Key)}"
                                                               FontSize="18" />
                                                    <TextBlock Margin="5,0,0,0"
                                                               VerticalAlignment="Center"
                                                               Text="{x:Bind Group.(Cls:FileSystemStorageGroupItem.Description),Mode=OneWay}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </SemanticZoom.ZoomedOutView>
                            </SemanticZoom>
                        </controls:Case>
                        <controls:Case Value="GridViewLargeIconControl">
                            <SemanticZoom>
                                <SemanticZoom.ZoomedInView>
                                    <GridView Name="GridViewLargeIconControl"
                                              SelectionMode="Extended"
                                              CanDrag="False"
                                              CanReorderItems="False"
                                              AllowDrop="True"
                                              IsItemClickEnabled="True"
                                              IsDoubleTapEnabled="True"
                                              ShowsScrollingPlaceholders="False"
                                              Drop="ViewControl_Drop"
                                              DragOver="ViewControl_DragOver"
                                              DoubleTapped="ViewControl_DoubleTapped"
                                              PreviewKeyDown="ViewControl_PreviewKeyDown"
                                              ItemClick="ViewControl_ItemClick"
                                              ContextRequested="ViewControl_ContextRequested"
                                              ContextCanceled="ViewControl_ContextCanceled"
                                              SelectionChanged="ViewControl_SelectionChanged"
                                              ContainerContentChanging="ViewControl_ContainerContentChanging"
                                              Windows11NotPresent:ItemContainerStyleSelector="{StaticResource AnimationStyleSelector}"
                                              ItemsSource="{x:Bind CollectionVS.View,Mode=OneWay}"
                                              ItemContainerTransitions="{x:Bind Cls:AnimationController.Current.RepositionTransitions,Mode=OneWay}"
                                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                              ScrollViewer.HorizontalScrollMode="Disabled"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                              ScrollViewer.VerticalScrollMode="Auto">
                                        <GridView.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <ItemsWrapGrid Orientation="Horizontal"
                                                               AreStickyGroupHeadersEnabled="True"
                                                               HorizontalAlignment="Stretch" />
                                            </ItemsPanelTemplate>
                                        </GridView.ItemsPanel>
                                        <Windows11Present:GridView.ItemContainerStyle>
                                            <Style TargetType="GridViewItem"
                                                   BasedOn="{StaticResource DefaultGridViewItemStyle}">
                                                <Setter Property="HorizontalContentAlignment"
                                                        Value="Stretch" />
                                            </Style>
                                        </Windows11Present:GridView.ItemContainerStyle>
                                        <GridView.ItemTemplate>
                                            <DataTemplate x:DataType="Cls:FileSystemStorageItemBase">
                                                <Grid Padding="5"
                                                      Background="Transparent">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="210" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="10" />
                                                    </Grid.RowDefinitions>
                                                    <Image HorizontalAlignment="Center"
                                                           Stretch="Uniform"
                                                           Source="{x:Bind Thumbnail,Mode=OneWay}"
                                                           Opacity="{x:Bind ThumbnailStatus,Mode=OneWay,Converter={StaticResource ThumbnailStatusConverter}}"
                                                           x:Phase="1"
                                                           Width="260" />
                                                    <Image x:Name="ThumbnailOverlay"
                                                           Margin="15,0,0,0"
                                                           Width="60"
                                                           HorizontalAlignment="Left"
                                                           VerticalAlignment="Bottom"
                                                           x:Phase="1"
                                                           Source="{x:Bind ThumbnailOverlay,Mode=OneWay}"
                                                           Opacity="{x:Bind ThumbnailStatus,Mode=OneWay,Converter={StaticResource ThumbnailStatusConverter}}"
                                                           Stretch="Uniform" />
                                                    <Grid Grid.Row="1"
                                                          MaxWidth="240"
                                                          HorizontalAlignment="Center">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Border Height="15"
                                                                Margin="0,2,5,0"
                                                                ToolTipService.ToolTip="{x:Bind SyncStatus,Mode=OneWay,Converter={StaticResource SyncStatusToolTipConverter}}"
                                                                Visibility="{x:Bind SyncStatus,Mode=OneWay,Converter={StaticResource SyncStatusVisibilityConverter}}">
                                                            <Viewbox HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center">
                                                                <FontIcon Glyph="{x:Bind SyncStatus,Mode=OneWay,Converter={StaticResource SyncStatusIconConverter}}"
                                                                          Foreground="{x:Bind SyncStatus,Mode=OneWay,Converter={StaticResource SyncStatusColorConverter}}" />
                                                            </Viewbox>
                                                        </Border>
                                                        <Grid MinHeight="32"
                                                              Grid.Column="1">
                                                            <TextBlock Text="{x:Bind DisplayName,Mode=OneWay,Converter={StaticResource NameExtensionsConverter}}"
                                                                       Visibility="{Binding ElementName=NameEditBox,Path=Visibility,Mode=OneWay,Converter={StaticResource InverseConverter}}"
                                                                       x:Name="NameLabel"
                                                                       VerticalAlignment="Center"
                                                                       HorizontalTextAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       PointerPressed="NameLabel_PointerPressed">
                                                            <ToolTipService.ToolTip>
                                                                <ToolTip Content="{x:Bind DisplayName,Mode=OneWay,Converter={StaticResource NameExtensionsConverter}}"
                                                                         Visibility="{Binding ElementName=NameLabel,Path=IsTextTrimmed}" />
                                                            </ToolTipService.ToolTip>
                                                            </TextBlock>
                                                            <TextBox VerticalAlignment="Stretch"
                                                                     HorizontalAlignment="Stretch"
                                                                     x:Name="NameEditBox"
                                                                     Text="{x:Bind DisplayName,Mode=OneWay,Converter={StaticResource NameExtensionsConverter}}"
                                                                     IsSpellCheckEnabled="False"
                                                                     Visibility="Collapsed" />
                                                        </Grid>
                                                    </Grid>
                                                    <Border Grid.Row="2"
                                                            CornerRadius="2"
                                                            Margin="5,0"
                                                            Height="4"
