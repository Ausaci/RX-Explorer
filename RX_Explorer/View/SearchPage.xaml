                                                                Grid.Column="1"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center"
                                                                Text="{x:Bind DisplayName,Converter={StaticResource NameExtensionsConverter}}"
                                                                HightLightText="{Binding ElementName=RootGrid,Path=DataContext.SearchText,Mode=OneWay}" />
                                    <Grid Grid.Column="2"
                                          Visibility="{x:Bind Label,Mode=OneWay,Converter={StaticResource TagToVisibilityConverter}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Border CornerRadius="2"
                                                Margin="5,4"
                                                Width="4"
                                                Background="{x:Bind Label,Mode=OneWay,Converter={StaticResource TagToColorConverter}}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Stretch" />
                                        <TextBlock Grid.Column="1"
                                                   Name="TagLabel"
                                                   Margin="5"
                                                   MaxWidth="120"
                                                   VerticalAlignment="Stretch"
                                                   TextTrimming="CharacterEllipsis"
                                                   Visibility="{x:Bind Label,Mode=OneWay,Converter={StaticResource StringToVisibilityConverter}}"
                                                   Foreground="{x:Bind Label,Mode=OneWay,Converter={StaticResource TagToColorConverter}}"
                                                   Text="{x:Bind Label,Mode=OneWay,Converter={StaticResource TagToLabelConverter}}">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding ElementName=TagLabel,Path=Text}"
                                                         Visibility="{Binding ElementName=TagLabel,Path=IsTextTrimmed}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                    </Grid>
                                </Grid>
