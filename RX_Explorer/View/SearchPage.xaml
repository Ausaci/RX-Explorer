                                           Margin="5,0,0,0"
                                           Width="16"
                                           Height="16"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Bottom"
                                           x:Phase="1"
                                           Source="{x:Bind ThumbnailOverlay, Mode=OneWay}"
                                           Stretch="Uniform" />
