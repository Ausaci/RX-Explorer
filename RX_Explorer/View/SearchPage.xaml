                                           HorizontalAlignment="Left"
                                           Text="{x:Bind IO:Path.GetDirectoryName(Path)}"
                                           Name="PathLabel"
                                           Padding="10,0,0,0"
                                           TextTrimming="CharacterEllipsis"
                                           Grid.Column="2">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Content="{x:Bind IO:Path.GetDirectoryName(Path)}"
                                                 Visibility="{Binding ElementName=PathLabel,Path=IsTextTrimmed}" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                                <TextBlock VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Padding="10,0,0,0"
                                           Name="ModifiedTimeLabel"
                                           Text="{x:Bind ModifiedTime,Mode=OneWay,Converter={StaticResource DateTimeConverter}}"
                                           Grid.Column="4"
                                           TextTrimming="CharacterEllipsis">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Content="{x:Bind ModifiedTime,Mode=OneWay,Converter={StaticResource DateTimeConverter}}"
                                                 Visibility="{Binding ElementName=ModifiedTimeLabel,Path=IsTextTrimmed}" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                                <TextBlock VerticalAlignment="Center"
