                                                        <Border Padding="40,10,10,10"
                                                                MinHeight="45"
                                                                CornerRadius="0,0,4,4"
                                                                BorderThickness="1"
                                                                BorderBrush="{ThemeResource BorderDefaultBrush}"
                                                                Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                                            <CheckBox Content="搜索所有子文件夹"
                                                                      Name="BuiltInSearchAllSubFolders"
                                                                      x:Uid="SearchEngineAllSubFolders" />
                                                        </Border>
                                                    </StackPanel>
                                                </control:Case>
                                                <control:Case Value="2">
                                                    <StackPanel>
                                                        <Border Padding="40,10,10,10"
                                                                MinHeight="45"
                                                                CornerRadius="0"
                                                                BorderThickness="1"
                                                                BorderBrush="{ThemeResource BorderDefaultBrush}"
                                                                Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                                            <CheckBox Content="忽略大小写"
                                                                      x:Uid="SearchEngineIgnoreCase"
                                                                      IsChecked="True"
                                                                      x:Name="EverythingEngineIgnoreCase" />
