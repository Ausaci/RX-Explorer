                                                                            </VisualState.Setters>
                                                                        </VisualState>
                                                                    </VisualStateGroup>
                                                                    <VisualStateGroup>
                                                                        <VisualState x:Name="TerminalArgumentErrorTextNormalState" />
                                                                        <VisualState x:Name="TerminalArgumentErrorTextErrorState">
                                                                            <VisualState.StateTriggers>
                                                                                <Triggers:IsNullOrEmptyStateTrigger Value="{Binding ElementName=TerminalArgument,Path=Text,Mode=OneWay}" />
                                                                                <Triggers:RegexStateTrigger Value="{Binding ElementName=TerminalArgument,Path=Text,Mode=OneWay}"
