                                                                                               Grid.Column="1"
                                                                                               x:Uid="EmptyNotAllowed"
                                                                                               FontSize="12"
                                                                                               Margin="5"
                                                                                               Foreground="Red"
                                                                                               TextWrapping="WrapWholeWords"
                                                                                               TextTrimming="CharacterEllipsis"
                                                                                               Visibility="Collapsed" />
                                                                                </Grid>
                                                                            </Border>
                                                                            <Border Padding="60,10,14,10"
                                                                                    MinHeight="45"
                                                                                    CornerRadius="0"
                                                                                    BorderThickness="1"
                                                                                    BorderBrush="{ThemeResource BorderDefaultBrush}"
                                                                                    Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                                                                <Grid>
                                                                                    <Grid.RowDefinitions>
                                                                                        <RowDefinition Height="*" />
                                                                                        <RowDefinition Height="Auto" />
                                                                                    </Grid.RowDefinitions>
                                                                                    <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition Width="Auto" />
                                                                                        <ColumnDefinition Width="*" />
                                                                                    </Grid.ColumnDefinitions>
                                                                                    <TextBlock Text="参数"
                                                                                               Name="TerminalArgumentLabel"
                                                                                               x:Uid="ModifyTerminalArgumentLabel"
                                                                                               VerticalAlignment="Center"
                                                                                               Margin="0,0,20,0" />
                                                                                    <TextBox Name="TerminalArgument"
                                                                                             x:Uid="ModifyTerminalArgument"
                                                                                             Text="{x:Bind Argument,Mode=TwoWay}"
                                                                                             IsSpellCheckEnabled="False"
                                                                                             PlaceholderText="[CurrentLocation]代表当前文件夹路径"
                                                                                             Grid.Column="1"
                                                                                             HorizontalAlignment="Stretch"
                                                                                             VerticalAlignment="Center" />
                                                                                    <TextBlock Name="TerminalArgumentErrorText"
                                                                                               x:Uid="TerminalArgumentErrorText"
                                                                                               FontSize="12"
                                                                                               Margin="5"
                                                                                               Grid.Row="1"
                                                                                               Grid.Column="1"
                                                                                               Foreground="Red"
                                                                                               TextWrapping="WrapWholeWords"
                                                                                               TextTrimming="CharacterEllipsis"
                                                                                               Visibility="Collapsed" />
                                                                                </Grid>
                                                                            </Border>
                                                                            <Border Padding="60,10,14,10"
                                                                                    MinHeight="45"
                                                                                    CornerRadius="0,0,4,4"
                                                                                    BorderThickness="1"
                                                                                    BorderBrush="{ThemeResource BorderDefaultBrush}"
                                                                                    Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                                                                <CheckBox Content="以管理员身份启动终端"
                                                                                          Name="RunAsAdmin"
                                                                                          IsChecked="{x:Bind RunAsAdmin,Mode=TwoWay}"
                                                                                          x:Uid="ModifyDefaultTerminalDialog_RunAsAdmin" />
                                                                            </Border>
                                                                        </StackPanel>
                                                                    </muxc:Expander.Content>
                                                                </muxc:Expander>
                                                            </StackPanel>
                                                        </UserControl>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                        </muxc:Expander.Content>
                                    </muxc:Expander>
                                    <muxc:Expander Margin="0,5,0,0"
                                                   ExpandDirection="Down"
                                                   HorizontalAlignment="Stretch"
                                                   HorizontalContentAlignment="Stretch"
                                                   VerticalContentAlignment="Top"
                                                   Padding="0"
                                                   MinHeight="60"
                                                   Background="Transparent"
                                                   CornerRadius="4,4,0,0">
                                        <muxc:Expander.Header>
                                            <RelativePanel Padding="4,10,0,10">
                                                <StackPanel RelativePanel.AlignVerticalCenterWithPanel="True"
                                                            RelativePanel.AlignLeftWithPanel="True"
                                                            RelativePanel.LeftOf="SearchEngineConfig"
                                                            Margin="0,0,20,0">
                                                    <TextBlock Text="搜索引擎配置"
                                                               TextTrimming="CharacterEllipsis"
                                                               x:Uid="SettingPageSearchEngineConfigLabel" />
