<UserControl  xmlns:Cls="using:RX_Explorer.Class"
              x:Class="RX_Explorer.View.SettingPage"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
              xmlns:control="using:Microsoft.Toolkit.Uwp.UI.Controls"
              xmlns:sys="using:System"
              xmlns:Brush="using:Microsoft.Toolkit.Uwp.UI.Media"
              xmlns:Windows11NotPresent="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractNotPresent(Windows.Foundation.UniversalApiContract,11)"
              xmlns:Triggers="using:Microsoft.Toolkit.Uwp.UI.Triggers"
              mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark">
                    <StaticResource x:Key="NavigationViewContentBackground"
                                    ResourceKey="SystemAltMediumLowColor" />
                    <StaticResource x:Key="ExpanderHeaderBackground"
                                    ResourceKey="SystemControlAcrylicElementMediumHighBrush" />
                    <StaticResource x:Key="ExpanderContentBorderBrush"
                                    ResourceKey="TransparentBrush" />
                    <SolidColorBrush x:Key="BorderDefaultBrush"
                                     Color="#19000000" />
                    <SolidColorBrush x:Key="TransparentBrush"
                                     Color="Transparent" />
                    <SolidColorBrush x:Key="WarningIconBrush"
                                     Color="Yellow" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <StaticResource x:Key="NavigationViewContentBackground"
                                    ResourceKey="SystemAltLowColor" />
                    <StaticResource x:Key="ExpanderHeaderBackground"
                                    ResourceKey="SystemControlAcrylicElementMediumHighBrush" />
                    <StaticResource x:Key="ExpanderContentBorderBrush"
                                    ResourceKey="TransparentBrush" />
                    <SolidColorBrush x:Key="BorderDefaultBrush"
                                     Color="#0F000000" />
                    <SolidColorBrush x:Key="TransparentBrush"
                                     Color="Transparent" />
                    <SolidColorBrush x:Key="WarningIconBrush"
                                     Color="OrangeRed" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <Thickness x:Key="NavigationViewPaneContentGridMargin">5,10</Thickness>
            <Thickness x:Key="ExpanderContentDownBorderThickness">0</Thickness>

            <Cls:ThemeToIndexConverter x:Key="ThemeConverter" />
            <Cls:InverseConverter x:Key="InverseConverter" />
            <Cls:PixelNumberFormatter x:Key="PixelFormatter" />

            <muxc:CommandBarFlyout Placement="BottomEdgeAlignedLeft"
                                   ShouldConstrainToRootBounds="False"
                                   x:Name="PictureFlyout">
                <muxc:CommandBarFlyout.SecondaryCommands>
                    <AppBarButton Icon="Delete"
                                  Label="删除"
                                  MinWidth="200"
                                  x:Name="DeletePictureButton"
                                  Click="DeletePictureButton_Click" />
                </muxc:CommandBarFlyout.SecondaryCommands>
            </muxc:CommandBarFlyout>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="RootGrid"
          Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="NavNormalWidthState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1150" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="SettingNavigation.PaneDisplayMode"
                                Value="Left" />
                        <Setter Target="ContentRootGrid.Margin"
                                Value="140,80" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="NavOverlayWidthState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="SettingNavigation.PaneDisplayMode"
                                Value="LeftCompact" />
                        <Setter Target="SettingNavigation.IsPaneToggleButtonVisible"
                                Value="True" />
                        <Setter Target="ContentRootGrid.Margin"
                                Value="60,80" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              BorderThickness="1.5"
              Margin="140,80"
              MaxWidth="1000"
              MaxHeight="800"
              x:Name="ContentRootGrid"
              BorderBrush="{ThemeResource BorderDefaultBrush}"
              CornerRadius="{StaticResource CustomCornerRadius}" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <muxc:NavigationView Name="SettingNavigation"
                                 PaneDisplayMode="Left"
                                 IsPaneOpen="True"
                                 OpenPaneLength="220"
                                 IsBackButtonVisible="Collapsed"
                                 IsPaneToggleButtonVisible="False"
                                 IsSettingsVisible="False"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"
                                 Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}"
                                 ItemInvoked="SettingNavigation_ItemInvoked">
                <muxc:NavigationView.MenuItems>
                    <muxc:NavigationViewItem IsSelected="True">
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xE10F;" />
                        </muxc:NavigationViewItem.Icon>
                        <muxc:NavigationViewItem.Content>
                            <TextBlock Text="基本"
                                       x:Uid="SettingBasicText"
                                       TextTrimming="CharacterEllipsis"
                                       FontSize="16" />
                        </muxc:NavigationViewItem.Content>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem>
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xF8A6;" />
                        </muxc:NavigationViewItem.Icon>
                        <muxc:NavigationViewItem.Content>
                            <TextBlock Text="高级"
                                       x:Uid="SettingAdvance"
                                       TextTrimming="CharacterEllipsis"
                                       FontSize="16" />
                        </muxc:NavigationViewItem.Content>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem>
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xE2B1;" />
                        </muxc:NavigationViewItem.Icon>
                        <muxc:NavigationViewItem.Content>
                            <TextBlock Text="个性化"
                                       x:Uid="SettingPersonalize"
                                       TextTrimming="CharacterEllipsis"
                                       FontSize="16" />
                        </muxc:NavigationViewItem.Content>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem>
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEA18;" />
                        </muxc:NavigationViewItem.Icon>
                        <muxc:NavigationViewItem.Content>
                            <TextBlock Text="隐私"
                                       x:Uid="SettingPrivacy"
                                       TextTrimming="CharacterEllipsis"
                                       FontSize="16" />
                        </muxc:NavigationViewItem.Content>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem>
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xE930;" />
                        </muxc:NavigationViewItem.Icon>
                        <muxc:NavigationViewItem.Content>
                            <TextBlock Text="版本"
                                       x:Uid="SettingVersion"
                                       TextTrimming="CharacterEllipsis"
                                       FontSize="16" />
                        </muxc:NavigationViewItem.Content>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem>
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xE946;" />
                        </muxc:NavigationViewItem.Icon>
                        <muxc:NavigationViewItem.Content>
                            <TextBlock Text="关于"
                                       x:Uid="SettingAbout"
                                       TextTrimming="CharacterEllipsis"
                                       FontSize="16" />
                        </muxc:NavigationViewItem.Content>
                    </muxc:NavigationViewItem>
                </muxc:NavigationView.MenuItems>
                <muxc:NavigationView.Content>
                    <control:SwitchPresenter Name="PresenterSwitcher"
                                             ContentTransitions="{x:Bind Cls:AnimationController.Current.ContentTransitions,Mode=OneWay}">
                        <control:Case Value="0"
                                      IsDefault="True">
                            <ScrollViewer Padding="20">
                                <StackPanel ChildrenTransitions="{x:Bind Cls:AnimationController.Current.RepositionTransitions,Mode=OneWay}">
                                    <TextBlock Text="基本"
                                               x:Uid="SettingBasicText"
                                               FontSize="18" />
                                    <Border Padding="20,10"
                                            Margin="0,0,0,5"
                                            MinHeight="60"
                                            BorderThickness="1"
                                            Name="NavigationViewLayoutArea"
                                            BorderBrush="{ThemeResource BorderDefaultBrush}"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <StackPanel RelativePanel.AlignVerticalCenterWithPanel="True"
                                                        RelativePanel.AlignLeftWithPanel="True"
                                                        RelativePanel.LeftOf="NavigationViewLayout"
                                                        Margin="0,0,20,0">
                                                <TextBlock Text="导航视图布局"
                                                           TextTrimming="CharacterEllipsis"
                                                           x:Uid="SettingNavLayoutLabel" />
                                                <TextBlock FontSize="12"
                                                           TextWrapping="WrapWholeWords"
                                                           TextTrimming="CharacterEllipsis"
                                                           Foreground="Gray"
                                                           x:Uid="SettingNavLayoutDescription"
                                                           Text="控制导航视图的布局位置" />
                                            </StackPanel>
                                            <ToggleSwitch OnContent="左侧"
                                                          OffContent="顶端"
                                                          Style="{StaticResource LeftLabelToggleSwitchStyle}"
                                                          x:Uid="SettingNavLayout"
                                                          Name="NavigationViewLayout"
                                                          RelativePanel.AlignRightWithPanel="True"
                                                          RelativePanel.AlignVerticalCenterWithPanel="True"
                                                          Toggled="NavigationViewLayout_Toggled" />
                                        </RelativePanel>
                                    </Border>
                                    <Border Padding="20,10"
                                            MinHeight="60"
                                            BorderThickness="1"
                                            BorderBrush="{ThemeResource BorderDefaultBrush}"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <StackPanel RelativePanel.AlignVerticalCenterWithPanel="True"
                                                        RelativePanel.AlignLeftWithPanel="True"
                                                        RelativePanel.LeftOf="ApplicationStyleSwitch"
                                                        Margin="0,0,20,0">
                                                <TextBlock Text="应用程序界面风格"
                                                           x:Uid="ApplicationStyleLabel"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock FontSize="12"
                                                           TextWrapping="WrapWholeWords"
                                                           TextTrimming="CharacterEllipsis"
                                                           Foreground="Gray"
                                                           x:Uid="ApplicationStyleContent"
                                                           Text="此选项用于在“常规”和“简约”风格之间切换。注意: 更改此选项后需要重新启动本应用程序" />
                                            </StackPanel>
                                            <ToggleSwitch OnContent="常规"
                                                          OffContent="简约"
                                                          Style="{StaticResource LeftLabelToggleSwitchStyle}"
                                                          Name="ApplicationStyleSwitch"
                                                          x:Uid="ApplicationStyleSwitch"
                                                          RelativePanel.AlignRightWithPanel="True"
                                                          RelativePanel.AlignVerticalCenterWithPanel="True" />
                                        </RelativePanel>
                                    </Border>
                                    <Border Margin="0,5,0,0"
                                            Padding="20,10"
                                            MinHeight="60"
                                            BorderThickness="1"
                                            BorderBrush="{ThemeResource BorderDefaultBrush}"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <StackPanel RelativePanel.AlignVerticalCenterWithPanel="True"
                                                        RelativePanel.AlignLeftWithPanel="True"
                                                        RelativePanel.LeftOf="TabPreviewSwitch"
                                                        Margin="0,0,20,0">
                                                <TextBlock Text="标签页预览"
                                                           TextTrimming="CharacterEllipsis"
                                                           x:Uid="SettingTabPreviewLabel" />
                                                <TextBlock FontSize="12"
                                                           TextWrapping="WrapWholeWords"
                                                           TextTrimming="CharacterEllipsis"
                                                           Foreground="Gray"
                                                           x:Uid="SettingTabPreviewDescription"
                                                           Text="启用此选项后将在鼠标悬停于标签页标题上时显示该标签页的预览" />
                                            </StackPanel>
                                            <ToggleSwitch OnContent="启用"
                                                          OffContent="禁用"
                                                          Style="{StaticResource LeftLabelToggleSwitchStyle}"
                                                          x:Uid="SettingTabPreview"
                                                          Name="TabPreviewSwitch"
                                                          RelativePanel.AlignRightWithPanel="True"
                                                          RelativePanel.AlignVerticalCenterWithPanel="True"
                                                          Toggled="TabPreviewSwitch_Toggled" />
                                        </RelativePanel>
                                    </Border>
                                    <Border Margin="0,5,0,0"
                                            Padding="20,10"
                                            MinHeight="60"
                                            BorderThickness="1"
                                            BorderBrush="{ThemeResource BorderDefaultBrush}"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <StackPanel RelativePanel.AlignVerticalCenterWithPanel="True"
                                                        RelativePanel.AlignLeftWithPanel="True"
                                                        RelativePanel.LeftOf="FileExtensionSwitch"
                                                        Margin="0,0,20,0">
                                                <TextBlock Text="显示文件扩展名称"
                                                           TextTrimming="CharacterEllipsis"
                                                           x:Uid="SettingDisplayExtensionsLabel"/>
                                                <TextBlock FontSize="12"
                                                           TextWrapping="WrapWholeWords"
                                                           TextTrimming="CharacterEllipsis"
                                                           Foreground="Gray"
                                                           Text="启用此选项后将显示文件扩展名称"
                                                           x:Uid="SettingDisplayExtensionsDescription"/>
                                            </StackPanel>
                                            <ToggleSwitch OnContent="启用"
                                                          OffContent="禁用"
                                                          Style="{StaticResource LeftLabelToggleSwitchStyle}"
                                                          Name="FileExtensionSwitch"
                                                          x:Uid="FileExtensionSwitch"
                                                          RelativePanel.AlignRightWithPanel="True"
                                                          RelativePanel.AlignVerticalCenterWithPanel="True" />
                                        </RelativePanel>
                                    </Border>
                                    <Border Margin="0,5,0,0"
                                            Padding="20,10"
                                            MinHeight="60"
                                            BorderThickness="1"
                                            BorderBrush="{ThemeResource BorderDefaultBrush}"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <StackPanel RelativePanel.AlignVerticalCenterWithPanel="True"
                                                        RelativePanel.AlignLeftWithPanel="True"
                                                        RelativePanel.LeftOf="DoubleClickGoToParent"
                                                        Margin="0,0,20,0">
                                                <TextBlock Text="双击空白处返回父文件夹"
                                                           x:Uid="DoubleClickGoToParentLabel"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock FontSize="12"
                                                           TextWrapping="WrapWholeWords"
                                                           TextTrimming="CharacterEllipsis"
                                                           Foreground="Gray"
                                                           x:Uid="DoubleClickGoToParentContent"
                                                           Text="此选项控制是否启用双击空白处返回父文件夹的功能" />
                                            </StackPanel>
                                            <ToggleSwitch OnContent="启用"
                                                          OffContent="禁用"
                                                          Style="{StaticResource LeftLabelToggleSwitchStyle}"
                                                          Name="DoubleClickGoToParent"
                                                          x:Uid="DoubleClickGotoParentSwitch"
                                                          RelativePanel.AlignRightWithPanel="True"
                                                          RelativePanel.AlignVerticalCenterWithPanel="True"
                                                          Toggled="DoubleClickGoToParent_Toggled"/>
                                        </RelativePanel>
                                    </Border>
                                    <Border Margin="0,5,0,0"
                                            Padding="20,10"
                                            MinHeight="60"
                                            BorderThickness="1"
                                            BorderBrush="{ThemeResource BorderDefaultBrush}"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <StackPanel RelativePanel.AlignVerticalCenterWithPanel="True"
                                                        RelativePanel.AlignLeftWithPanel="True"
                                                        RelativePanel.LeftOf="ShowDetailsWhenHover"
                                                        Margin="0,0,20,0">
                                                <TextBlock Text="悬停时预览文件属性"
                                                           x:Uid="PreviewFileOnHoverTitle"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock FontSize="12"
                                                           TextWrapping="WrapWholeWords"
                                                           TextTrimming="CharacterEllipsis"
                                                           Foreground="Gray"
                                                           x:Uid="PreviewFileOnHoverContent"
                                                           Text="此选项控制是否在指针悬停于文件之上时显示文件属性的预览" />
                                            </StackPanel>
                                            <ToggleSwitch OnContent="启用"
                                                          OffContent="禁用"
                                                          Style="{StaticResource LeftLabelToggleSwitchStyle}"
                                                          Name="ShowDetailsWhenHover"
                                                          x:Uid="PreviewFileOnHoverSwitch"
                                                          RelativePanel.AlignRightWithPanel="True"
                                                          RelativePanel.AlignVerticalCenterWithPanel="True"
                                                          Toggled="ShowDetailsWhenHover_Toggled" />
                                        </RelativePanel>
                                    </Border>
                                    <muxc:Expander Margin="0,5,0,0"
                                                   ExpandDirection="Down"
                                                   HorizontalAlignment="Stretch"
                                                   HorizontalContentAlignment="Stretch"
                                                   VerticalContentAlignment="Stretch"
                                                   Padding="0"
                                                   MinHeight="60"
                                                   Background="Transparent"
                                                   CornerRadius="4,4,0,0">
                                        <muxc:Expander.Header>
                                            <StackPanel Padding="4,10,0,10">
                                                <TextBlock Text="自定义标签颜色和文字"
                                                           x:Uid="CustomLabelColorAndLabel"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock FontSize="12"
                                                           TextWrapping="WrapWholeWords"
                                                           TextTrimming="CharacterEllipsis"
                                                           Foreground="Gray"
                                                           x:Uid="CustomLabelColorAndLabelDescription"
                                                           Text="根据个人喜好自定义标签的颜色和文字" />
                                            </StackPanel>
                                        </muxc:Expander.Header>
                                        <muxc:Expander.Content>
                                            <StackPanel>
                                                <Border Padding="40,10,10,10"
                                                        CornerRadius="0"
                                                        BorderThickness="1"
                                                        BorderBrush="{ThemeResource BorderDefaultBrush}"
                                                        Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="60" />
                                                            <ColumnDefinition Width="10" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <control:ColorPickerButton Height="32"
                                                                                   Margin="0,1,0,0"
                                                                                   x:Name="PredefineTagColorPicker1"
                                                                                   HorizontalAlignment="Stretch"
                                                                                   VerticalAlignment="Center">
                                                            <control:ColorPickerButton.ColorPickerStyle>
                                                                <Style TargetType="control:ColorPicker">
                                                                    <Setter Property="ColorSpectrumShape"
                                                                            Value="Box" />
                                                                    <Setter Property="IsAlphaEnabled"
                                                                            Value="True" />
                                                                    <Setter Property="IsHexInputVisible"
                                                                            Value="True" />
                                                                </Style>
                                                            </control:ColorPickerButton.ColorPickerStyle>
                                                        </control:ColorPickerButton>
                                                        <TextBox Grid.Column="2"
                                                                 Name="PredefineLabelBox1"
                                                                 x:Uid="CustomLabelColorAndLabelBox"
                                                                 PlaceholderText="请输入您希望使用的标签文字"
                                                                 HorizontalAlignment="Stretch"
                                                                 VerticalAlignment="Center"
                                                                 LostFocus="PredefineLabelBox1_LostFocus"/>
                                                    </Grid>
                                                </Border>
                                                <Border Padding="40,10,10,10"
                                                        CornerRadius="0"
                                                        BorderThickness="1"
                                                        BorderBrush="{ThemeResource BorderDefaultBrush}"
                                                        Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="60" />
                                                            <ColumnDefinition Width="10" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <control:ColorPickerButton Height="32"
                                                                                   Margin="0,1,0,0"
                                                                                   x:Name="PredefineTagColorPicker2"
                                                                                   HorizontalAlignment="Stretch"
                                                                                   VerticalAlignment="Center">
                                                            <control:ColorPickerButton.ColorPickerStyle>
                                                                <Style TargetType="control:ColorPicker">
                                                                    <Setter Property="ColorSpectrumShape"
                                                                            Value="Box" />
                                                                    <Setter Property="IsAlphaEnabled"
                                                                            Value="True" />
                                                                    <Setter Property="IsHexInputVisible"
                                                                            Value="True" />
                                                                </Style>
                                                            </control:ColorPickerButton.ColorPickerStyle>
                                                        </control:ColorPickerButton>
                                                        <TextBox Grid.Column="2"
                                                                 Name="PredefineLabelBox2"
                                                                 x:Uid="CustomLabelColorAndLabelBox"
                                                                 PlaceholderText="请输入您希望使用的标签文字"
                                                                 HorizontalAlignment="Stretch"
                                                                 VerticalAlignment="Center"
                                                                 LostFocus="PredefineLabelBox2_LostFocus"/>
                                                    </Grid>
                                                </Border>
                                                <Border Padding="40,10,10,10"
                                                        CornerRadius="0"
                                                        BorderThickness="1"
                                                        BorderBrush="{ThemeResource BorderDefaultBrush}"
                                                        Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="60" />
                                                            <ColumnDefinition Width="10" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <control:ColorPickerButton Height="32"
                                                                                   Margin="0,1,0,0"
                                                                                   x:Name="PredefineTagColorPicker3"
                                                                                   HorizontalAlignment="Stretch"
                                                                                   VerticalAlignment="Center">
                                                            <control:ColorPickerButton.ColorPickerStyle>
                                                                <Style TargetType="control:ColorPicker">
                                                                    <Setter Property="ColorSpectrumShape"
                                                                            Value="Box" />
                                                                    <Setter Property="IsAlphaEnabled"
                                                                            Value="True" />
                                                                    <Setter Property="IsHexInputVisible"
                                                                            Value="True" />
                                                                </Style>
                                                            </control:ColorPickerButton.ColorPickerStyle>
                                                        </control:ColorPickerButton>
                                                        <TextBox Grid.Column="2"
                                                                 Name="PredefineLabelBox3"
                                                                 x:Uid="CustomLabelColorAndLabelBox"
                                                                 PlaceholderText="请输入您希望使用的标签文字"
                                                                 HorizontalAlignment="Stretch"
                                                                 VerticalAlignment="Center"
                                                                 LostFocus="PredefineLabelBox3_LostFocus"/>
                                                    </Grid>
                                                </Border>
                                                <Border Padding="40,10,10,10"
                                                        CornerRadius="0,0,4,4"
                                                        BorderThickness="1"
                                                        BorderBrush="{ThemeResource BorderDefaultBrush}"
                                                        Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="60" />
                                                            <ColumnDefinition Width="10" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <control:ColorPickerButton Height="32"
                                                                                   Margin="0,1,0,0"
                                                                                   x:Name="PredefineTagColorPicker4"
                                                                                   HorizontalAlignment="Stretch"
                                                                                   VerticalAlignment="Center">
                                                            <control:ColorPickerButton.ColorPickerStyle>
                                                                <Style TargetType="control:ColorPicker">
                                                                    <Setter Property="ColorSpectrumShape"
                                                                            Value="Box" />
                                                                    <Setter Property="IsAlphaEnabled"
                                                                            Value="True" />
                                                                    <Setter Property="IsHexInputVisible"
                                                                            Value="True" />
                                                                </Style>
                                                            </control:ColorPickerButton.ColorPickerStyle>
                                                        </control:ColorPickerButton>
                                                        <TextBox Grid.Column="2"
                                                                 Name="PredefineLabelBox4"
                                                                 x:Uid="CustomLabelColorAndLabelBox"
                                                                 PlaceholderText="请输入您希望使用的标签文字"
                                                                 HorizontalAlignment="Stretch"
                                                                 VerticalAlignment="Center"
                                                                 LosingFocus="PredefineLabelBox4_LosingFocus"/>
                                                    </Grid>
                                                </Border>
                                            </StackPanel>
                                        </muxc:Expander.Content>
                                    </muxc:Expander>
                                    <muxc:Expander Margin="0,5,0,0"
                                                   ExpandDirection="Down"
                                                   HorizontalAlignment="Stretch"
                                                   HorizontalContentAlignment="Stretch"
                                                   VerticalContentAlignment="Stretch"
                                                   Padding="0"
                                                   MinHeight="60"
                                                   Background="Transparent"
                                                   CornerRadius="4,4,0,0">
                                        <muxc:Expander.Header>
                                            <RelativePanel Padding="4,10,0,10">
                                                <StackPanel RelativePanel.AlignVerticalCenterWithPanel="True"
                                                            RelativePanel.AlignLeftWithPanel="True"
                                                            RelativePanel.LeftOf="TreeViewDetach"
                                                            Margin="0,0,20,0">
                                                    <TextBlock Text="导航面板"
                                                               TextTrimming="CharacterEllipsis"
                                                               x:Uid="SettingTreeViewDetachLabel" />
                                                    <TextBlock FontSize="12"
                                                               TextWrapping="WrapWholeWords"
                                                               TextTrimming="CharacterEllipsis"
                                                               Foreground="Gray"
                                                               x:Uid="SettingTreeViewDetachDescription"
                                                               Text="控制是否显示位于应用程序左侧的导航面板" />
                                                </StackPanel>
                                                <ToggleSwitch OnContent="启用"
                                                              OffContent="隐藏"
                                                              x:Uid="SettingTreeViewDetach"
                                                              Style="{StaticResource LeftLabelToggleSwitchStyle}"
