                                                                                <Triggers:IsNullOrEmptyStateTrigger Value="{Binding ElementName=TerminalExecutablePath,Path=Text,Mode=OneWay}" />
                                                                                <Triggers:IsNullOrEmptyStateTrigger Value="{Binding ElementName=TerminalArgument,Path=Text,Mode=OneWay}" />
