                                                          RelativePanel.AlignVerticalCenterWithPanel="True"
                                                          Background="{ThemeResource ComboBoxDisabledBackgroundThemeBrush}"
                                                          SelectionChanged="SearchEngineConfig_SelectionChanged" />
                                            </RelativePanel>
                                        </muxc:Expander.Header>
                                        <muxc:Expander.Content>
                                            <control:SwitchPresenter Value="{x:Bind sys:Convert.ToString(SearchEngineConfig.SelectedIndex),Mode=OneWay}"
                                                                     ContentTransitions="{x:Bind Cls:AnimationController.Current.PaneTopTransitions,Mode=OneWay}">
                                                <control:Case Value="1">
                                                    <StackPanel>
                                                        <Border Padding="40,10,10,10"
                                                                MinHeight="45"
                                                                CornerRadius="0"
                                                                BorderThickness="1"
                                                                BorderBrush="{ThemeResource BorderDefaultBrush}"
                                                                Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                                            <CheckBox Content="忽略大小写"
                                                                      x:Uid="SearchEngineIgnoreCase"
                                                                      IsChecked="{x:Bind BuiltInEngineIncludeAQS.IsChecked,Mode=OneWay,Converter={StaticResource InverseConverter}}"
                                                                      IsEnabled="{x:Bind BuiltInEngineIncludeAQS.IsChecked,Mode=OneWay,Converter={StaticResource InverseConverter}}"
                                                                      x:Name="BuiltInEngineIgnoreCase" />
                                                        </Border>
                                                        <Border Padding="40,10,10,10"
                                                                MinHeight="45"
                                                                CornerRadius="0"
                                                                BorderThickness="1"
                                                                BorderBrush="{ThemeResource BorderDefaultBrush}"
                                                                Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                                            <CheckBox Content="使用正则表达式"
                                                                      x:Uid="SearchEngineUseRegex"
                                                                      x:Name="BuiltInEngineIncludeRegex"
                                                                      IsEnabled="{x:Bind BuiltInEngineIncludeAQS.IsChecked,Mode=OneWay,Converter={StaticResource InverseConverter}}" />
                                                        </Border>
                                                        <Border Padding="40,10,10,10"
                                                                MinHeight="45"
                                                                CornerRadius="0"
                                                                BorderThickness="1"
                                                                BorderBrush="{ThemeResource BorderDefaultBrush}"
                                                                Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                                            <CheckBox Content="使用高级查询语法(AQS)"
                                                                      x:Uid="SearchEngineUseAQS"
                                                                      x:Name="BuiltInEngineIncludeAQS"
                                                                      IsEnabled="{x:Bind BuiltInEngineIncludeRegex.IsChecked,Mode=OneWay,Converter={StaticResource InverseConverter}}" />
                                                        </Border>
                                                        <Border Padding="40,10,10,10"
                                                                MinHeight="45"
                                                                CornerRadius="0"
                                                                BorderThickness="1"
                                                                BorderBrush="{ThemeResource BorderDefaultBrush}"
                                                                Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                                            <CheckBox Name="BuiltInSearchUseIndexer"
                                                                      Content="仅通过索引执行搜索"
                                                                      x:Uid="SearchEngineUseIndexer" />
