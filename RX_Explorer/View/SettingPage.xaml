                                                                                                PointerPressed="TerminalEditName_PointerPressed"
                                                                                                Foreground="{ThemeResource SystemAccentColor}" />
                                                                                </Viewbox>
                                                                                <Viewbox Height="15"
                                                                                         Margin="10,0,0,0"
                                                                                         Visibility="Collapsed"
                                                                                         Name="TerminalWarningIcon">
                                                                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
