                                    </Button>

                                    <Button Padding="20,10"
                                            MinHeight="60"
                                            Margin="0,5,0,0"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Stretch"
                                            Name="ContactAuthor"
                                            Click="ContactAuthor_Click"
                                            BorderThickness="1"
                                            BorderBrush="{ThemeResource BorderDefaultBrush}"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <StackPanel RelativePanel.AlignVerticalCenterWithPanel="True"
                                                        RelativePanel.AlignLeftWithPanel="True"
                                                        RelativePanel.LeftOf="ContactAuthorTipIcon">
                                                <TextBlock Text="通过邮件联系开发者"
                                                           x:Uid="SettingContactAuthorLabel"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock Foreground="Gray"
                                                           FontSize="12"
                                                           x:Uid="SettingContactAuthorDescription"
                                                           Text="点击以向开发者发送邮件"
                                                           TextWrapping="WrapWholeWords" />
                                            </StackPanel>
                                            <Viewbox Name="ContactAuthorTipIcon"
                                                     Height="20"
                                                     Width="20"
                                                     RelativePanel.AlignRightWithPanel="True"
                                                     RelativePanel.AlignVerticalCenterWithPanel="True">
                                                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                          Foreground="{ThemeResource SystemAccentColor}"
                                                          Glyph="&#xE715;" />
                                            </Viewbox>
                                        </RelativePanel>
                                    </Button>

                                    <Button Padding="20,10"
                                            MinHeight="60"
                                            Margin="0,5,0,0"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Stretch"
                                            Name="CopyQQ"
                                            Click="CopyQQ_Click"
                                            x:Load="False"
                                            Visibility="Collapsed"
                                            BorderThickness="1"
                                            BorderBrush="{ThemeResource BorderDefaultBrush}"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <StackPanel RelativePanel.AlignVerticalCenterWithPanel="True"
                                                        RelativePanel.AlignLeftWithPanel="True"
                                                        RelativePanel.LeftOf="QQTipIcon">
                                                <TextBlock Text="QQ交流群"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock Foreground="Gray"
                                                           FontSize="12"
                                                           Text="点击复制: 937294538"
                                                           TextWrapping="WrapWholeWords" />
                                            </StackPanel>
                                            <Viewbox Name="QQTipIcon"
                                                     Height="20"
                                                     Width="20"
                                                     RelativePanel.AlignRightWithPanel="True"
                                                     RelativePanel.AlignVerticalCenterWithPanel="True">
                                                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                          Foreground="{ThemeResource SystemAccentColor}"
                                                          Glyph="&#xE136;" />
                                            </Viewbox>
                                        </RelativePanel>
                                    </Button>

                                    <muxc:Expander Margin="0,5,0,0"
                                                   ExpandDirection="Down"
                                                   HorizontalAlignment="Stretch"
                                                   HorizontalContentAlignment="Stretch"
                                                   VerticalContentAlignment="Top"
                                                   Padding="0"
                                                   MinHeight="60"
                                                   Background="Transparent"
                                                   CornerRadius="4,4,0,0">
                                        <muxc:Expander.Header>
                                            <StackPanel Padding="4,10,0,10">
                                                <TextBlock Text="翻译贡献者名单"
                                                           x:Uid="TranslatorList"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock Foreground="Gray"
                                                           FontSize="12"
                                                           Text="特别感谢以下提供翻译的人员:"
                                                           x:Uid="ThankTranslate"
                                                           TextTrimming="CharacterEllipsis"
                                                           TextWrapping="WrapWholeWords" />
                                            </StackPanel>
                                        </muxc:Expander.Header>
                                        <muxc:Expander.Content>
                                            <StackPanel>
                                                <Border Padding="40,10,10,10"
                                                        MinHeight="45"
                                                        CornerRadius="0"
                                                        BorderThickness="1"
                                                        BorderBrush="{ThemeResource BorderDefaultBrush}"
                                                        Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                                    <TextBlock Text="• Yann Lacroix (French)" />
                                                </Border>
                                                <Border Padding="40,10,10,10"
                                                        MinHeight="45"
                                                        CornerRadius="0"
                                                        BorderThickness="1"
                                                        BorderBrush="{ThemeResource BorderDefaultBrush}"
                                                        Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                                    <TextBlock Text="• 秋夜AuNight (Chinese (Traditional))" />
                                                </Border>
                                                <Border Padding="40,10,10,10"
                                                        MinHeight="45"
                                                        CornerRadius="0"
                                                        BorderThickness="1"
                                                        BorderBrush="{ThemeResource BorderDefaultBrush}"
                                                        Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                                    <TextBlock Text="• Manuel Armenteros del Olmo (Spanish)" />
                                                </Border>
                                                <Border Padding="40,10,10,10"
                                                        MinHeight="45"
                                                        CornerRadius="0"
                                                        BorderThickness="1"
                                                        BorderBrush="{ThemeResource BorderDefaultBrush}"
                                                        Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                                    <TextBlock Text="• Jonas Gunkel (German)" />
                                                </Border>
                                            </StackPanel>
                                        </muxc:Expander.Content>
                                    </muxc:Expander>
                                </StackPanel>
                            </ScrollViewer>
                        </control:Case>
                    </control:SwitchPresenter>
                </muxc:NavigationView.Content>
            </muxc:NavigationView>

            <Grid Grid.Row="1"
                  Padding="20,0"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Background="{ThemeResource SystemControlAcrylicElementBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        MinWidth="120"
                        Grid.Column="1"
                        Content="确认"
                        Name="CloseButton"
                        Click="CloseButton_Click" />
            </Grid>

            <control:Loading x:Name="LoadingControl"
                             Grid.RowSpan="2"
                             IsLoading="False">
                <control:Loading.Background>
                    <Brush:AcrylicBrush TintColor="{ThemeResource SystemAltHighColor}"
                                        TintOpacity="0.6"
                                        BlurAmount="3" />
                </control:Loading.Background>
                <StackPanel Padding="12"
                            Width="230">
                    <TextBlock Name="LoadingText"
                               FontSize="16"
                               TextAlignment="Center" />
                    <muxc:ProgressBar IsIndeterminate="True"
                                      Margin="0,10,0,0" />
                </StackPanel>
            </control:Loading>
        </Grid>
    </Grid>
</UserControl>
