<Page x:Class="RX_Explorer.SeparateWindow.PropertyWindow.PropertiesWindowBase"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Cls="using:RX_Explorer.Class"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
      xmlns:Data="using:Windows.UI.Xaml.Data"
      xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:Brush="using:Microsoft.Toolkit.Uwp.UI.Media"
      xmlns:Trigger="using:Microsoft.Toolkit.Uwp.UI.Triggers"
      xmlns:Windows11Present="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract,14)"
      xmlns:Windows11NotPresent="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractNotPresent(Windows.Foundation.UniversalApiContract,14)"
      xmlns:Sys="using:System"
      mc:Ignorable="d"
      d:DesignHeight="650"
      d:DesignWidth="420"
      RequestedTheme="{x:Bind Cls:AppThemeController.Current.Theme,Mode=OneWay}"
      Background="{ThemeResource SystemControlAcrylicWindowMediumHighBrush}">

    <Page.Resources>
        <CollectionViewSource x:Name="ContactsCVS"
                              IsSourceGrouped="True"
                              Source="{x:Bind PropertiesCollection}" />
        <DataTemplate x:Key="LabelTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding Key,Mode=OneTime}"
                           Name="KeyLabel"
                           TextTrimming="CharacterEllipsis"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Key,Mode=OneTime}"
                                 Visibility="{Binding ElementName=KeyLabel,Path=IsTextTrimmed}" />
                    </ToolTipService.ToolTip>
                </TextBlock>
                <TextBlock Grid.Column="1"
                           Name="ValueLabel"
                           MaxLines="3"
                           TextWrapping="Wrap"
                           TextTrimming="CharacterEllipsis"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Text="{Binding Value,Mode=OneTime}">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Value,Mode=OneTime}"
                                 Visibility="{Binding ElementName=ValueLabel,Path=IsTextTrimmed}" />
                    </ToolTipService.ToolTip>
                </TextBlock>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="RatingTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding Key,Mode=OneTime}"
                           Name="KeyLabel"
                           TextTrimming="CharacterEllipsis"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Key,Mode=OneTime}"
                                 Visibility="{Binding ElementName=KeyLabel,Path=IsTextTrimmed}" />
                    </ToolTipService.ToolTip>
                </TextBlock>
                <muxc:RatingControl Grid.Column="1"
                                    IsReadOnly="True"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Margin="0,8,0,0"
                                    Value="{Binding Value,Mode=OneTime,Converter={StaticResource RatingConverter}}" />
            </Grid>
        </DataTemplate>

        <Cls:AnimationStyleSelector x:Key="AnimationStyleSelector" />

        <Cls:RatingValueConverter x:Key="RatingConverter" />

        <Cls:RatingControlDataTemplateSelector x:Key="DetailListDataTemplateSelector"
                                               Label="{StaticResource LabelTemplate}"
                                               Rating="{StaticResource RatingTemplate}" />

        <Cls:InverseConverter x:Key="InverseConverter" />
        
        <Storyboard x:Name="CapacityRingStoryboard">
            <DoubleAnimation Duration="0:0:1"
                             x:Name="CapacityRingDoubleAnimation"
                             EnableDependentAnimation="True"
                             From="0"
                             To="{x:Bind RootDrive.Percent,TargetNullValue=0}"
                             Storyboard.TargetName="CapacityProgress"
                             Storyboard.TargetProperty="Value">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="NormalState" />
                <VisualState x:Name="DescriptionState">
                    <VisualState.StateTriggers>
                        <Trigger:RegexStateTrigger Value="{x:Bind StorageItems[0].Name}"
                                                   Expression="\.(exe|bat|lnk|url)$"
                                                   Options="IgnoreCase" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="FileOpenWithLabel.Visibility"
                                Value="Collapsed" />
                        <Setter Target="FileDescriptionLabel.Visibility"
                                Value="Visible" />
                        <Setter Target="OpenWithContentPanel.Visibility"
                                Value="Collapsed" />
                        <Setter Target="FileDescriptionContent.Visibility"
                                Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
            <VisualStateGroup>
                <VisualState x:Name="UnlockNormalStatus" />
                <VisualState x:Name="UnlockSuccessStatus">
                    <VisualState.Setters>
                        <Setter Target="UnlockProgressRing.Visibility"
                                Value="Collapsed" />
                        <Setter Target="UnlockButtonText.Visibility"
                                Value="Visible" />
                        <Setter Target="UnlockStatusArea.Visibility"
                                Value="Visible" />
                        <Setter Target="UnlockStatusIcon.Glyph"
                                Value="&#xE930;" />
                        <Setter Target="UnlockStatusIcon.Foreground"
                                Value="LightGreen" />
                        <Setter Target="UnlockText.Foreground"
                                Value="LightGreen" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="UnlockErrorStatus">
                    <VisualState.Setters>
                        <Setter Target="UnlockProgressRing.Visibility"
                                Value="Collapsed" />
                        <Setter Target="UnlockButtonText.Visibility"
                                Value="Visible" />
                        <Setter Target="UnlockStatusArea.Visibility"
                                Value="Visible" />
                        <Setter Target="UnlockStatusIcon.Glyph"
                                Value="&#xE783;" />
                        <Setter Target="UnlockStatusIcon.Foreground"
                                Value="Orange" />
                        <Setter Target="UnlockText.Foreground"
                                Value="Orange" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="UnlockRunningStatus">
                    <VisualState.Setters>
                        <Setter Target="UnlockProgressRing.Visibility"
                                Value="Visible" />
                        <Setter Target="UnlockStatusArea.Visibility"
                                Value="Collapsed" />
                        <Setter Target="UnlockButtonText.Visibility"
                                Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
            <VisualStateGroup>
                <VisualState x:Name="NormalHashCheckStatus">
                    <VisualState.Setters>
                        <Setter Target="CheckHashStatusIcon.Visibility"
                                Value="Collapsed" />
                        <Setter Target="HashKindLabel.Visibility"
                                Value="Collapsed" />
                        <Setter Target="CheckHashButtonText.Visibility"
                                Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="SuccessHashCheckStatus">
                    <VisualState.StateTriggers>
                        <Trigger:RegexStateTrigger Value="{x:Bind HashKindLabel.Content,Mode=OneWay}"
                                                   Expression="MD5|SHA1|SHA256"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="CheckHashStatusIcon.Visibility"
                                Value="Visible"/>
                        <Setter Target="CheckHashStatusIcon.Glyph"
                                Value="&#xE930;" />
                        <Setter Target="CheckHashStatusIcon.Foreground"
                                Value="LightGreen" />
                        <Setter Target="CheckHashButtonText.Visibility"
                                Value="Collapsed" />
                        <Setter Target="HashKindLabel.Visibility"
                                Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="ErrorHashCheckStatus">
                    <VisualState.StateTriggers>
                        <Trigger:IsEqualStateTrigger Value="{x:Bind HashKindLabel.Content,Mode=OneWay}"
                                                     To="{x:Bind Cls:Globalization.GetString('Properties_Tools_CheckHashKind_None')}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="CheckHashStatusIcon.Visibility"
                                Value="Visible" />
                        <Setter Target="CheckHashStatusIcon.Glyph"
                                Value="&#xE783;" />
                        <Setter Target="CheckHashStatusIcon.Foreground"
                                Value="Orange" />
                        <Setter Target="CheckHashButtonText.Visibility"
                                Value="Collapsed" />
                        <Setter Target="HashKindLabel.Visibility"
                                Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
            <VisualStateGroup>
                <VisualState x:Name="NormalCapacityStatus" />
                <VisualState x:Name="RedCapacityStatus">
                    <VisualState.StateTriggers>
                        <Trigger:CompareStateTrigger Value="{x:Bind RootDrive.Percent,TargetNullValue=0}"
                                                     To="0.85"
                                                     Comparison="GreaterThanOrEqual" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="CapacityProgress.Foreground"
                                Value="Red"/>
                        <Setter Target="CapacityPercentText.Foreground"
                                Value="Red"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <RelativePanel Padding="12,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       MaxWidth="300">
            <TextBlock RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.LeftOf="PropertiesTitleRight"
                       TextTrimming="CharacterEllipsis"
                       Name="PropertiesTitleLeft" />
            <TextBlock Text="{x:Bind Cls:Globalization.GetString('Properties_Window_Title')}"
                       x:Name="PropertiesTitleRight"
                       RelativePanel.AlignRightWithPanel="True"
                       Padding="10,0" />
        </RelativePanel>
        <Pivot Grid.Row="1"
               Name="PivotControl">
            <PivotItem>
                <PivotItem.Header>
                    <TextBlock Text="General"
                               Name="GeneralTab"
                               FontSize="18" />
                </PivotItem.Header>
                <ScrollViewer Padding="5,10"
                              VerticalScrollBarVisibility="Hidden">
                    <controls:SwitchPresenter Grid.Row="1"
                                              Value="RootDrive"
                                              Name="GeneralPanelSwitcher">
                        <controls:Case Value="File">
                            <Grid x:Name="FilePanelRoot">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"
                                                      MinWidth="80" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50" />
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="50" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Image Stretch="Uniform"
                                       Name="FileThumbnail"
                                       HorizontalAlignment="Left" />
                                <TextBox VerticalAlignment="Center"
                                         Grid.Column="1"
                                         Margin="2,0,0,0"
                                         Name="FileStorageItemName" />
                                <Border Height="2"
                                        Grid.Row="1"
                                        Grid.ColumnSpan="2"
                                        HorizontalAlignment="Stretch"
                                        Background="{ThemeResource MenuFlyoutSeparatorThemeBrush}" />
                                <TextBlock Text="Type:"
                                           Grid.Row="2"
                                           x:Uid="Properties_General_Type"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="Open with:"
                                           Name="FileOpenWithLabel"
                                           x:Uid="Properties_General_OpenWith"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           Grid.Row="3" />
                                <TextBlock Text="{x:Bind Cls:Globalization.GetString('Properties_General_Description')}"
                                           Name="FileDescriptionLabel"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           Grid.Row="3"
                                           Visibility="Collapsed" />
                                <Border Height="2"
                                        Grid.Row="4"
                                        Grid.ColumnSpan="2"
                                        HorizontalAlignment="Stretch"
                                        Background="{ThemeResource MenuFlyoutSeparatorThemeBrush}" />
                                <TextBlock Grid.Row="5"
                                           VerticalAlignment="Center"
                                           x:Uid="Properties_General_Location"
                                           TextTrimming="CharacterEllipsis"
                                           Text="Location:" />
                                <TextBlock Grid.Row="6"
                                           x:Uid="Properties_General_Size"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center"
                                           Text="Size:" />
                                <TextBlock Grid.Row="7"
                                           x:Uid="Properties_General_SizeOnDisk"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center"
                                           Text="Size on disk:" />
                                <TextBlock Grid.Row="9"
                                           TextTrimming="CharacterEllipsis"
                                           x:Uid="Properties_General_CreatedTime"
                                           VerticalAlignment="Center"
                                           Text="Created:" />
                                <TextBlock Grid.Row="10"
                                           x:Uid="Properties_General_ModifiedTime"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           Text="Modified:" />
                                <TextBlock Grid.Row="11"
                                           x:Uid="Properties_General_LastAccessTime"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           Text="Accessed:" />
                                <TextBlock Name="FileTypeContent"
                                           IsTextSelectionEnabled="True"
                                           Grid.Row="2"
                                           Grid.Column="1"
                                           Padding="2,0,0,0"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis" />
                                <TextBlock Name="FileDescriptionContent"
                                           IsTextSelectionEnabled="True"
                                           Grid.Row="3"
                                           Grid.Column="1"
                                           Padding="2,0,0,0"
                                           VerticalAlignment="Center"
                                           Visibility="Collapsed"
                                           TextTrimming="CharacterEllipsis" />
                                <RelativePanel Grid.Row="3"
                                               Grid.Column="1"
                                               VerticalAlignment="Center"
                                               Name="OpenWithContentPanel">
                                    <Image Name="FileOpenWithImage"
                                           Height="25"
                                           Stretch="Uniform"
                                           RelativePanel.AlignLeftWithPanel="True" />
                                    <TextBlock RelativePanel.LeftOf="FileChangeOpenWithButton"
                                               RelativePanel.RightOf="FileOpenWithImage"
                                               Name="FileOpenWithContent"
                                               IsTextSelectionEnabled="True"
                                               RelativePanel.AlignVerticalCenterWithPanel="True"
                                               Margin="8,0"
                                               ToolTipService.ToolTip="{x:Bind FileOpenWithContent.Text,Mode=OneWay}"
                                               TextTrimming="CharacterEllipsis" />
                                    <Button RelativePanel.AlignRightWithPanel="True"
                                            RelativePanel.AlignVerticalCenterWithPanel="True"
                                            Name="FileChangeOpenWithButton"
                                            Click="ChangeOpenWithButton_Click"
                                            Content="Change"
                                            x:Uid="Properties_General_Change"
                                            MinWidth="80"
                                            Padding="4,2" />
                                </RelativePanel>
                                <ScrollViewer Grid.Row="5"
                                              Grid.Column="1"
                                              VerticalAlignment="Center"
                                              Padding="2,0,0,0"
                                              HorizontalScrollMode="Enabled"
                                              VerticalScrollBarVisibility="Disabled"
                                              HorizontalScrollBarVisibility="Hidden"
                                              Name="FileLocationScrollViewer">
                                    <TextBlock Name="FileLocationContent"
                                               VerticalAlignment="Center"
                                               ToolTipService.ToolTip="{x:Bind FileLocationContent.Text, Mode=OneWay}"
                                               IsTextSelectionEnabled="True" />
                                </ScrollViewer>
                                <TextBlock Name="FileSizeContent"
                                           VerticalAlignment="Center"
                                           Grid.Row="6"
                                           Grid.Column="1"
                                           Padding="2,0,0,0"
                                           TextTrimming="CharacterEllipsis" />
                                <TextBlock Name="FileSizeOnDiskContent"
                                           VerticalAlignment="Center"
                                           Grid.Row="7"
                                           Grid.Column="1"
                                           Padding="2,0,0,0"
                                           TextTrimming="CharacterEllipsis" />
                                <Border Height="2"
                                        Grid.Row="8"
                                        Grid.ColumnSpan="2"
                                        HorizontalAlignment="Stretch"
                                        Background="{ThemeResource MenuFlyoutSeparatorThemeBrush}" />
                                <TextBlock Name="FileCreatedContent"
                                           VerticalAlignment="Center"
                                           Grid.Row="9"
                                           Grid.Column="1"
                                           Padding="2,0,0,0"
                                           TextTrimming="CharacterEllipsis" />
                                <TextBlock Name="FileModifiedContent"
                                           VerticalAlignment="Center"
                                           Grid.Row="10"
                                           Grid.Column="1"
                                           Padding="2,0,0,0"
                                           TextTrimming="CharacterEllipsis" />
                                <TextBlock Name="FileAccessedContent"
                                           VerticalAlignment="Center"
                                           Grid.Row="11"
                                           Grid.Column="1"
                                           Padding="2,0,0,0"
                                           TextTrimming="CharacterEllipsis" />
                                <Border Height="2"
                                        Grid.Row="12"
                                        Grid.ColumnSpan="2"
                                        HorizontalAlignment="Stretch"
                                        Background="{ThemeResource MenuFlyoutSeparatorThemeBrush}" />
                                <StackPanel Grid.Row="13"
                                            Grid.ColumnSpan="2"
                                            Orientation="Horizontal">
                                    <CheckBox Content="Readonly"
                                              x:Uid="Properties_General_ReadonlyCheckbox"
                                              x:Name="FileReadonlyAttribute" />
                                    <CheckBox Content="Hidden"
                                              x:Name="FileHiddenAttribute"
                                              x:Uid="Properties_General_HiddenCheckbox"
                                              Margin="10,0,0,0" />
                                </StackPanel>
                            </Grid>
                        </controls:Case>
                        <controls:Case Value="Folder">
                            <Grid x:Name="FolderPanelRoot">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"
                                                      MinWidth="80" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50" />
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="50" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Image Stretch="Uniform"
                                       Name="FolderThumbnail"
                                       HorizontalAlignment="Left" />
                                <TextBox VerticalAlignment="Center"
                                         Grid.Column="1"
                                         Margin="2,0,0,0"
                                         Name="FolderStorageItemName" />
                                <Border Height="2"
                                        Grid.Row="1"
                                        Grid.ColumnSpan="2"
                                        HorizontalAlignment="Stretch"
                                        Background="{ThemeResource MenuFlyoutSeparatorThemeBrush}" />
                                <TextBlock Text="Type:"
                                           Grid.Row="2"
                                           x:Uid="Properties_General_Type"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center" />
                                <TextBlock Grid.Row="3"
                                           VerticalAlignment="Center"
                                           x:Uid="Properties_General_Location"
                                           TextTrimming="CharacterEllipsis"
                                           Text="Location:" />
                                <TextBlock Grid.Row="4"
                                           x:Uid="Properties_General_Size"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center"
                                           Text="Size:" />
                                <TextBlock Grid.Row="5"
                                           TextTrimming="CharacterEllipsis"
                                           x:Uid="Properties_General_Contains"
                                           VerticalAlignment="Center"
                                           Text="Contains:" />
                                <Border Height="2"
                                        Grid.Row="6"
                                        Grid.ColumnSpan="2"
                                        HorizontalAlignment="Stretch"
                                        Background="{ThemeResource MenuFlyoutSeparatorThemeBrush}" />
                                <TextBlock Grid.Row="7"
                                           TextTrimming="CharacterEllipsis"
                                           x:Uid="Properties_General_CreatedTime"
                                           VerticalAlignment="Center"
                                           Text="Created:" />
                                <Border Height="2"
                                        Grid.Row="8"
                                        Grid.ColumnSpan="2"
                                        HorizontalAlignment="Stretch"
                                        Background="{ThemeResource MenuFlyoutSeparatorThemeBrush}" />
                                <TextBlock RelativePanel.AlignRightWithPanel="True"
                                           Name="FolderTypeContent"
                                           IsTextSelectionEnabled="True"
                                           Grid.Row="2"
                                           Grid.Column="1"
                                           Padding="2,0,0,0"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis" />
                                <ScrollViewer Grid.Row="3"
                                              Grid.Column="1"
                                              VerticalAlignment="Center"
                                              Padding="2,0,0,0"
                                              HorizontalScrollMode="Enabled"
                                              VerticalScrollBarVisibility="Disabled"
                                              HorizontalScrollBarVisibility="Hidden"
                                              Name="FolderLocationScrollViewer">
                                    <TextBlock Name="FolderLocationContent"
                                               VerticalAlignment="Center"
                                               ToolTipService.ToolTip="{x:Bind FolderLocationContent.Text, Mode=OneWay}"
                                               IsTextSelectionEnabled="True" />
                                </ScrollViewer>
                                <TextBlock Name="FolderSizeContent"
                                           VerticalAlignment="Center"
                                           Grid.Row="4"
                                           Grid.Column="1"
                                           Padding="2,0,0,0"
                                           TextTrimming="CharacterEllipsis" />
                                <TextBlock Name="FolderContainsContent"
                                           VerticalAlignment="Center"
                                           Grid.Row="5"
                                           Grid.Column="1"
                                           Padding="2,0,0,0"
                                           TextTrimming="CharacterEllipsis" />
                                <TextBlock Name="FolderCreatedContent"
                                           VerticalAlignment="Center"
                                           Grid.Row="7"
                                           Grid.Column="1"
                                           Padding="2,0,0,0"
                                           TextTrimming="CharacterEllipsis" />
                                <StackPanel Grid.Row="9"
                                            Grid.ColumnSpan="2"
                                            Orientation="Horizontal">
                                    <CheckBox Content="Readonly"
                                              IsThreeState="True"
                                              x:Uid="Properties_General_ReadonlyCheckbox"
                                              x:Name="FolderReadonlyAttribute" />
                                    <CheckBox Content="Hidden"
                                              x:Name="FolderHiddenAttribute"
                                              x:Uid="Properties_General_HiddenCheckbox"
                                              Margin="10,0,0,0" />
                                </StackPanel>
                            </Grid>
                        </controls:Case>
                        <controls:Case Value="MultiItems">
                            <Grid x:Name="MultiPanelRoot">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"
                                                      MinWidth="80" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50" />
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="50" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Image Stretch="Uniform"
                                       Name="MultiThumbnail"
                                       HorizontalAlignment="Left" />
                                <TextBlock VerticalAlignment="Center"
                                           Grid.Column="1"
                                           Margin="2,0,0,0"
                                           Name="MultiStorageItemName" />
                                <Border Height="2"
                                        Grid.Row="1"
                                        Grid.ColumnSpan="2"
                                        HorizontalAlignment="Stretch"
                                        Background="{ThemeResource MenuFlyoutSeparatorThemeBrush}" />
                                <TextBlock Text="Type:"
                                           Grid.Row="2"
                                           x:Uid="Properties_General_Type"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center" />
                                <TextBlock Grid.Row="3"
                                           VerticalAlignment="Center"
                                           x:Uid="Properties_General_Location"
                                           TextTrimming="CharacterEllipsis"
                                           Text="Location:" />
                                <TextBlock Grid.Row="4"
                                           x:Uid="Properties_General_Size"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center"
                                           Text="Size:" />
                                <TextBlock Grid.Row="5"
                                           x:Uid="Properties_General_SizeOnDisk"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center"
                                           Text="Size on disk:" />
                                <Border Height="2"
                                        Grid.Row="6"
                                        Grid.ColumnSpan="2"
                                        HorizontalAlignment="Stretch"
                                        Background="{ThemeResource MenuFlyoutSeparatorThemeBrush}" />
                                <TextBlock RelativePanel.AlignRightWithPanel="True"
                                           Name="MultiTypeContent"
                                           IsTextSelectionEnabled="True"
                                           Grid.Row="2"
                                           Grid.Column="1"
                                           Padding="2,0,0,0"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis" />
                                <ScrollViewer Grid.Row="3"
                                              Grid.Column="1"
                                              VerticalAlignment="Center"
                                              Padding="2,0,0,0"
                                              HorizontalScrollMode="Enabled"
                                              VerticalScrollBarVisibility="Disabled"
                                              HorizontalScrollBarVisibility="Hidden"
                                              Name="MultiLocationScrollViewer">
                                    <TextBlock Name="MultiLocationContent"
                                               VerticalAlignment="Center"
                                               ToolTipService.ToolTip="{x:Bind FolderLocationContent.Text, Mode=OneWay}"
                                               IsTextSelectionEnabled="True" />
                                </ScrollViewer>
                                <TextBlock Name="MultiSizeContent"
                                           VerticalAlignment="Center"
                                           Grid.Row="4"
                                           Grid.Column="1"
                                           Padding="2,0,0,0"
                                           x:Uid="Properties_General_Size"
                                           TextTrimming="CharacterEllipsis" />
                                <TextBlock Name="MultiSizeOnDiskContent"
                                           VerticalAlignment="Center"
                                           x:Uid="Properties_General_SizeOnDisk"
                                           Grid.Row="5"
                                           Grid.Column="1"
                                           Padding="2,0,0,0"
                                           TextTrimming="CharacterEllipsis" />
                                <StackPanel Grid.Row="7"
                                            Grid.ColumnSpan="2"
                                            Orientation="Horizontal">
                                    <CheckBox Content="Readonly"
                                              IsThreeState="True"
                                              x:Uid="Properties_General_ReadonlyCheckbox"
                                              x:Name="MultiReadonlyAttribute" />
                                    <CheckBox Content="Hidden"
                                              IsThreeState="True"
                                              x:Name="MultiHiddenAttribute"
                                              x:Uid="Properties_General_HiddenCheckbox"
