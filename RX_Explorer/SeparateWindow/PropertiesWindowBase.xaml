                                                       TextWrapping="WrapWholeWords"
                                                       TextTrimming="CharacterEllipsis"
                                                       FontSize="12" />
                                        </Grid>
                                        <RelativePanel Margin="0,10,0,0"
                                                       HorizontalAlignment="Right">
                                            <Button Name="UnlockButton"
                                                    MinWidth="120"
                                                    HorizontalContentAlignment="Stretch"
                                                    VerticalContentAlignment="Stretch"
                                                    RelativePanel.AlignLeftWithPanel="True"
                                                    RelativePanel.AlignVerticalCenterWithPanel="True">
                                                <Button.Content>
                                                    <Grid>
                                                        <TextBlock Text="Unlock"
                                                                   Name="UnlockButtonText"
                                                                   HorizontalAlignment="Center"
                                                                   x:Uid="Properties_Tools_Unlock" />
                                                        <muxc:ProgressRing Height="18"
                                                                           Width="18"
                                                                           HorizontalAlignment="Center"
                                                                           Name="UnlockProgressRing"
                                                                           Visibility="Collapsed" />
                                                    </Grid>
                                                </Button.Content>
                                                <Button.Flyout>
                                                    <Flyout Placement="BottomEdgeAlignedRight"
                                                            x:Name="UnlockFlyout">
                                                        <StackPanel MaxWidth="320">
                                                            <TextBlock Text="您要如何解除占用?"
                                                                       x:Uid="Properties_Tools_UnlockFlyout_Text1" />
                                                            <TextBlock Text="点击&quot;请求关闭应用&quot;将通知正在使用此文件的应用退出，应用可以保存所有数据"
                                                                       TextWrapping="WrapWholeWords"
                                                                       x:Uid="Properties_Tools_UnlockFlyout_Text2"
                                                                       Margin="0,10,0,0"
                                                                       FontSize="12" />
                                                            <TextBlock Text="点击&quot;强制终止应用&quot;将立即退出应用，所有未保存的数据都将丢失"
                                                                       TextWrapping="WrapWholeWords"
                                                                       x:Uid="Properties_Tools_UnlockFlyout_Text3"
                                                                       Margin="0,5,0,0"
                                                                       FontSize="12" />
                                                            <Grid Margin="0,10,0,0">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition />
                                                                    <ColumnDefinition />
                                                                </Grid.ColumnDefinitions>
                                                                <Button Content="请求关闭应用"
                                                                        HorizontalAlignment="Stretch"
                                                                        x:Uid="Properties_Tools_UnlockFlyout_CloseNormal"
                                                                        Name="CloseNormal"
                                                                        Click="Unlock_Click"
                                                                        Margin="0,0,5,0" />
                                                                <Button Content="强制终止应用"
                                                                        Grid.Column="1"
                                                                        Margin="5,0,0,0"
                                                                        Name="CloseForce"
                                                                        x:Uid="Properties_Tools_UnlockFlyout_CloseForce"
                                                                        Click="Unlock_Click"
                                                                        HorizontalAlignment="Stretch" />
                                                            </Grid>
                                                        </StackPanel>
                                                    </Flyout>
                                                </Button.Flyout>
                                            </Button>
                                        </RelativePanel>
                                    </StackPanel>
                                </Border>

                                <Border Background="Transparent"
                                        BorderBrush="Gray"
                                        BorderThickness="1"
                                        CornerRadius="{StaticResource ControlCornerRadius}">
                                    <StackPanel Padding="10">
                                        <RelativePanel>
                                            <Viewbox x:Name="HashCalculateIcon"
                                                     Height="35"
                                                     Width="35"
                                                     RelativePanel.AlignLeftWithPanel="True">
                                                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                          Glyph="&#xEB95;" />
                                            </Viewbox>
                                            <StackPanel RelativePanel.RightOf="HashCalculateIcon"
                                                        RelativePanel.AlignRightWithPanel="True"
                                                        Margin="10,0,0,0">
                                                <TextBlock Text="计算哈希值"
                                                           x:Uid="HashHeader" />
                                                <TextBlock Text="校验哈希值以确保文件完全一致"
                                                           TextWrapping="WrapWholeWords"
                                                           TextTrimming="CharacterEllipsis"
                                                           FontSize="12"
                                                           x:Uid="HashContent" />
                                            </StackPanel>
                                        </RelativePanel>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition Height="20"/>
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Margin="0,10,5,0">
                                                <TextBox IsSpellCheckEnabled="False"
                                                         IsReadOnly="True"
                                                         IsEnabled="False"
                                                         Header="MD5"
                                                         Name="MD5TextBox"
                                                         HorizontalAlignment="Stretch" />
                                                <muxc:ProgressBar Minimum="0"
                                                                  Maximum="100"
                                                                  Height="3"
                                                                  HorizontalAlignment="Stretch"
                                                                  Name="MD5Progress"
                                                                  Visibility="{x:Bind CalculateMd5.IsEnabled,Mode=OneWay,Converter={StaticResource InverseConverter}}"/>
                                            </StackPanel>
                                            <Button Margin="5,0,0,0"
                                                    Grid.Column="1"
                                                    MinWidth="100"
                                                    x:Uid="Properties_Tools_CalculateButton"
                                                    Content="Calculate"
                                                    VerticalAlignment="Bottom"
                                                    Name="CalculateMd5"
                                                    Click="CalculateMd5_Click" />
                                            <StackPanel Grid.Row="1"
                                                        Margin="0,10,5,0">
                                                <TextBox IsSpellCheckEnabled="False"
                                                         IsReadOnly="True"
                                                         IsEnabled="False"
                                                         Header="SHA-1"
                                                         Name="SHA1TextBox"
                                                         HorizontalAlignment="Stretch" />
                                                <muxc:ProgressBar Minimum="0"
                                                                  Maximum="100"
                                                                  Height="3"
                                                                  HorizontalAlignment="Stretch"
                                                                  Name="SHA1Progress"
                                                                  Visibility="{x:Bind CalculateSHA1.IsEnabled,Mode=OneWay,Converter={StaticResource InverseConverter}}"/>
                                            </StackPanel>
                                            <Button Margin="5,0,0,0"
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    MinWidth="100"
                                                    Content="Calculate"
                                                    Name="CalculateSHA1"
                                                    x:Uid="Properties_Tools_CalculateButton"
                                                    Click="CalculateSHA1_Click"
                                                    VerticalAlignment="Bottom" />
                                            <StackPanel Grid.Row="2"
                                                        Margin="0,10,5,0">
                                                <TextBox IsSpellCheckEnabled="False"
                                                         IsReadOnly="True"
                                                         IsEnabled="False"
                                                         Header="SHA-256"
                                                         Name="SHA256TextBox"
                                                         HorizontalAlignment="Stretch" />
                                                <muxc:ProgressBar Minimum="0"
                                                                  Maximum="100"
                                                                  Height="3"
                                                                  HorizontalAlignment="Stretch"
                                                                  Name="SHA256Progress"
                                                                  Visibility="{x:Bind CalculateSHA256.IsEnabled,Mode=OneWay,Converter={StaticResource InverseConverter}}"/>
                                            </StackPanel>
                                            <Button Margin="5,0,0,0"
                                                    Grid.Row="2"
                                                    Grid.Column="1"
                                                    MinWidth="100"
                                                    Name="CalculateSHA256"
                                                    Content="Calculate"
                                                    x:Uid="Properties_Tools_CalculateButton"
                                                    VerticalAlignment="Bottom"
                                                    Click="CalculateSHA256_Click" />
                                            <Border Height="2"
                                                    Grid.Row="3"
                                                    Grid.ColumnSpan="2"
                                                    HorizontalAlignment="Stretch"
                                                    Background="{ThemeResource MenuFlyoutSeparatorThemeBrush}" />
                                            <StackPanel Grid.Row="4"
                                                        Margin="0,0,5,0">
                                                <TextBlock Text="哈希值对比"
                                                           Name="CheckHashTitle"
                                                           Foreground="Gray"
                                                           x:Uid="Properties_Tools_CheckHashTitle"/>
                                                <RelativePanel Margin="0,8,0,0"
                                                               ChildrenTransitions="{x:Bind Cls:AnimationController.Current.AddDeleteTransitions,Mode=OneWay}">
                                                    <Button Name="HashKindLabel"
                                                            Margin="0,0,2,0"
                                                            Visibility="Collapsed"
                                                            RelativePanel.AlignLeftWithPanel="True"
                                                            RelativePanel.AlignVerticalCenterWithPanel="True" />
                                                    <TextBox Name="CheckHashBox"
                                                             IsEnabled="False"
                                                             IsSpellCheckEnabled="False"
                                                             PlaceholderText="请在此处粘贴哈希值"
                                                             x:Uid="Properties_Tools_CheckHashBoxPlaceholderText"
                                                             TextChanging="CheckHashBox_TextChanging"
                                                             RelativePanel.RightOf="HashKindLabel"
                                                             RelativePanel.AlignRightWithPanel="True"
                                                             RelativePanel.AlignVerticalCenterWithPanel="True" />
                                                </RelativePanel>
                                            </StackPanel>
                                            <Button Margin="5,0,0,0"
                                                    Grid.Row="4"
                                                    Grid.Column="1"
                                                    MinWidth="100"
                                                    IsEnabled="False"
                                                    Name="CheckHashButton"
                                                    VerticalAlignment="Bottom"
                                                    Click="CheckHashButton_Click">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Check"
                                                               x:Uid="Properties_Tools_CheckHashButtonLabel"
                                                               Name="CheckHashButtonText"/>
                                                    <Viewbox>
                                                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                                  Name="CheckHashStatusIcon"
                                                                  Margin="0,2,0,0"
                                                                  Visibility="Collapsed" />
                                                    </Viewbox>
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </controls:Case>
                        <controls:Case Value="RootDrive">
                            <StackPanel>
                                <Border Background="Transparent"
                                        BorderBrush="Gray"
                                        BorderThickness="1"
                                        CornerRadius="{StaticResource ControlCornerRadius}">
                                    <StackPanel Padding="10">
                                        <RelativePanel>
                                            <Viewbox x:Name="DriveErrorCheckIcon"
                                                     Height="35"
                                                     Width="35"
                                                     RelativePanel.AlignLeftWithPanel="True">
                                                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                          Glyph="&#xEE6F;" />
                                            </Viewbox>
                                            <StackPanel RelativePanel.RightOf="DriveErrorCheckIcon"
                                                        RelativePanel.AlignRightWithPanel="True"
                                                        Margin="10,0,0,0">
                                                <TextBlock Text="磁盘错误检查"
                                                           x:Uid="DriveErrorCheckHeader" />
                                                <TextBlock Text="此选项将检查驱动器是否存在文件系统错误"
                                                           TextWrapping="WrapWholeWords"
                                                           TextTrimming="CharacterEllipsis"
                                                           FontSize="12"
                                                           x:Uid="DriveErrorCheckContent" />
                                            </StackPanel>
                                        </RelativePanel>
                                        <Button Margin="0,10,0,0"
                                                Content="检查"
                                                MinWidth="120"
                                                Name="DriveErrorCheck"
                                                x:Uid="DriveErrorCheckButton"
                                                HorizontalAlignment="Right"
                                                Click="DriveErrorCheck_Click"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="Transparent"
                                        BorderBrush="Gray"
                                        BorderThickness="1"
                                        Margin="0,20,0,0"
                                        CornerRadius="{StaticResource ControlCornerRadius}">
                                    <StackPanel Padding="10">
                                        <RelativePanel>
                                            <Viewbox x:Name="DriveOptimizeIcon"
                                                     Height="35"
                                                     Width="35"
                                                     RelativePanel.AlignLeftWithPanel="True">
                                                <SymbolIcon Symbol="Manage" />
                                            </Viewbox>
                                            <StackPanel RelativePanel.RightOf="DriveOptimizeIcon"
                                                        RelativePanel.AlignRightWithPanel="True"
                                                        Margin="10,0,0,0">
                                                <TextBlock Text="磁盘碎片优化"
                                                           x:Uid="DriveOptimizeHeader" />
                                                <TextBlock Text="优化计算机的磁盘驱动器可以使它更高效运行"
                                                           TextWrapping="WrapWholeWords"
                                                           TextTrimming="CharacterEllipsis"
                                                           FontSize="12"
                                                           x:Uid="DriveOptimizeContent" />
                                            </StackPanel>
                                        </RelativePanel>
                                        <Button Margin="0,10,0,0"
                                                Content="优化"
                                                MinWidth="120"
                                                x:Name="DriveOptimize"
                                                x:Uid="DriveOptimizeButton"
                                                HorizontalAlignment="Right"
                                                Click="DriveOptimize_Click" />
                                    </StackPanel>
                                </Border>
                                <Border Background="Transparent"
                                        BorderBrush="Gray"
                                        BorderThickness="1"
                                        Margin="0,20,0,0"
                                        CornerRadius="{StaticResource ControlCornerRadius}">
                                    <StackPanel Padding="10">
                                        <RelativePanel>
                                            <Viewbox x:Name="DriveCleanupIcon"
                                                     Height="35"
                                                     Width="35"
                                                     RelativePanel.AlignLeftWithPanel="True">
                                                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                          Glyph="&#xEF17;" />
                                            </Viewbox>
                                            <StackPanel RelativePanel.RightOf="DriveCleanupIcon"
                                                        RelativePanel.AlignRightWithPanel="True"
                                                        Margin="10,0,0,0">
                                                <TextBlock Text="磁盘清理"
                                                           x:Uid="DriveCleanupHeader" />
                                                <TextBlock Text="清理不再需要的文件以节省磁盘空间并提升磁盘速度"
                                                           TextWrapping="WrapWholeWords"
                                                           TextTrimming="CharacterEllipsis"
                                                           x:Uid="DriveCleanupContent"
                                                           FontSize="12" />
                                            </StackPanel>
                                        </RelativePanel>
                                        <Button Margin="0,10,0,0"
                                                Content="清理"
                                                MinWidth="120"
                                                x:Uid="DriveCleanupButton"
                                                HorizontalAlignment="Right"
                                                Click="DriveCleanup_Click" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </controls:Case>
                    </controls:SwitchPresenter>
                </ScrollViewer>
            </PivotItem>
        </Pivot>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,10,0">
            <Button Content="{x:Bind Cls:Globalization.GetString('Common_Dialog_ConfirmButton')}"
                    Background="{ThemeResource SystemAccentColor}"
                    Width="120"
                    d:Content="确定"
                    Name="ConfirmButton"
                    Click="ConfirmButton_Click" />
            <Button Content="{x:Bind Cls:Globalization.GetString('Common_Dialog_CancelButton')}"
                    Margin="10,0,0,0"
                    Width="120"
                    d:Content="取消"
                    Name="CancelButton"
                    Click="CancelButton_Click" />
        </StackPanel>

        <controls:Loading x:Name="LoadingControl"
                          IsLoading="False"
                          Grid.RowSpan="3">
            <controls:Loading.Background>
                <Brush:AcrylicBrush TintColor="{ThemeResource SystemAltHighColor}"
                                    TintOpacity="0.6"
                                    BlurAmount="3" />
            </controls:Loading.Background>
            <StackPanel>
                <TextBlock Text="Applying"
                           FontSize="16"
                           x:Uid="Properties_Loading_Text"
                           HorizontalAlignment="Center" />
                <muxc:ProgressBar IsIndeterminate="True"
                                  Width="180"
                                  Margin="0,10" />
                <Button Content="{x:Bind Cls:Globalization.GetString('Common_Dialog_CancelButton')}"
                        Name="CancelSavingButton"
                        HorizontalAlignment="Center"
                        MinWidth="100"
                        Click="CancelSavingButton_Click" />
            </StackPanel>
        </controls:Loading>
    </Grid>
</Page>
